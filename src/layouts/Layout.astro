---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import criticalCSS from '../styles/critical.css?raw';

interface Props {
  title: string;
  description?: string;
  schema?: object | object[];
  canonical?: string;
}

const { title, description = "Nurture - The GTA's premier Airbnb property management company. We handle everything so you can earn more while doing less.", schema, canonical } = Astro.props;

// Generate canonical URL
const siteUrl = "https://www.nurturestays.ca";
const currentPath = Astro.url.pathname;
const canonicalUrl = canonical || `${siteUrl}${currentPath === '/' ? '' : currentPath}`;

// LocalBusiness schema for GBP ranking
const localBusinessSchema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "@id": "https://www.nurturestays.ca/#business",
  "name": "Nurture Airbnb Property Management",
  "url": "https://www.nurturestays.ca",
  "logo": "https://www.nurturestays.ca/images/logo.webp",
  "image": "https://www.nurturestays.ca/images/logo.webp",
  "description": "Professional Airbnb property management in the Greater Toronto Area. We handle guest communication, cleaning, pricing, and maintenance. 10-15% fees, 9-minute response time.",
  "telephone": "+1-647-957-8956",
  "email": "hello@nurturestays.ca",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "140 Simcoe St",
    "addressLocality": "Toronto",
    "addressRegion": "ON",
    "postalCode": "M5H 4E9",
    "addressCountry": "CA"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": 43.6492,
    "longitude": -79.3856
  },
  "openingHoursSpecification": [
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
      "opens": "09:00",
      "closes": "18:00"
    }
  ],
  "priceRange": "$$",
  "currenciesAccepted": "CAD",
  "paymentAccepted": "Credit Card, Debit Card, Bank Transfer",
  "areaServed": [
    { "@type": "City", "name": "Toronto", "containedInPlace": { "@type": "AdministrativeArea", "name": "Ontario" } },
    { "@type": "City", "name": "Mississauga" },
    { "@type": "City", "name": "Brampton" },
    { "@type": "City", "name": "Vaughan" },
    { "@type": "City", "name": "Markham" },
    { "@type": "City", "name": "Richmond Hill" },
    { "@type": "City", "name": "Oakville" },
    { "@type": "City", "name": "Burlington" },
    { "@type": "City", "name": "Hamilton" },
    { "@type": "City", "name": "Ajax" },
    { "@type": "City", "name": "Pickering" },
    { "@type": "City", "name": "Whitby" },
    { "@type": "City", "name": "Oshawa" },
    { "@type": "City", "name": "Scarborough" },
    { "@type": "City", "name": "North York" },
    { "@type": "City", "name": "Etobicoke" }
  ],
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Airbnb Management Services",
    "itemListElement": [
      { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Full Airbnb Management" } },
      { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Airbnb Co-Hosting" } },
      { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Short-Term Rental Management" } },
      { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Mid-Term Rental Management" } },
      { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Airbnb Cleaning Services" } }
    ]
  },
  "sameAs": [
    "https://www.facebook.com/nurtureproperties"
  ]
};

// Combine LocalBusiness schema with page-specific schema
const allSchemas = schema
  ? Array.isArray(schema)
    ? [localBusinessSchema, ...schema]
    : [localBusinessSchema, schema]
  : [localBusinessSchema];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Nurture</title>

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={`${title} | Nurture`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={`${siteUrl}/images/logo.webp`} />
    <meta property="og:site_name" content="Nurture Airbnb Property Management" />
    <meta property="og:locale" content="en_CA" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalUrl} />
    <meta name="twitter:title" content={`${title} | Nurture`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={`${siteUrl}/images/logo.webp`} />

    <!-- Additional SEO -->
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow, max-video-preview:-1, max-image-preview:large, max-snippet:-1" />
    <link rel="sitemap" type="application/xml" href="/sitemap.xml" />

    <!-- Pinterest Domain Verification -->
    <meta name="p:domain_verify" content="16302607cb59857c52c9f5b1d41516ab"/>

    <!-- Critical CSS - Inlined for fast initial render -->
    <style set:html={criticalCSS}></style>

    <!-- Non-critical CSS - Deferred loading -->
    <link rel="preload" href="/styles/global.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="/styles/global.css"></noscript>

    <!-- Preload critical assets for LCP - responsive for mobile -->
    <link rel="preload" href="/images/logo-mobile.webp" as="image" type="image/webp" media="(max-width: 768px)">
    <link rel="preload" href="/images/logo.webp" as="image" type="image/webp" media="(min-width: 769px)">

    <!-- DNS prefetch for external resources -->
    <link rel="dns-prefetch" href="https://fonts.googleapis.com">
    <link rel="dns-prefetch" href="https://fonts.gstatic.com">

    <!-- Fonts - Optimized loading with reduced weights for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;600&family=Poppins:wght@400;600&display=swap" rel="stylesheet" media="print" onload="this.media='all'">
    <noscript><link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;600&family=Poppins:wght@400;600&display=swap" rel="stylesheet"></noscript>

    <!-- Schema.org structured data -->
    {allSchemas.map(s => (
      <script type="application/ld+json" set:html={JSON.stringify(s)} />
    ))}
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
