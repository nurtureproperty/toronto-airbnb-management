---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  schema?: object | object[];
}

const { title, description = "Nurture - The GTA's premier Airbnb property management company. We handle everything so you can earn more while doing less.", schema } = Astro.props;

// Base Organization schema for all pages
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Nurture Airbnb Property Management",
  "url": "https://www.nurturestays.ca",
  "logo": "https://www.nurturestays.ca/images/logo.png",
  "description": "Professional Airbnb property management in the Greater Toronto Area. We handle guest communication, cleaning, pricing, and maintenance.",
  "telephone": "+1-647-957-8956",
  "email": "hello@nurturestays.ca",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Toronto",
    "addressRegion": "ON",
    "addressCountry": "CA"
  },
  "areaServed": [
    { "@type": "City", "name": "Toronto" },
    { "@type": "City", "name": "Mississauga" },
    { "@type": "City", "name": "Brampton" },
    { "@type": "City", "name": "Vaughan" },
    { "@type": "City", "name": "Markham" },
    { "@type": "City", "name": "Richmond Hill" },
    { "@type": "City", "name": "Oakville" },
    { "@type": "City", "name": "Burlington" },
    { "@type": "City", "name": "Hamilton" }
  ],
  "sameAs": []
};

// Combine organization schema with page-specific schema
const allSchemas = schema
  ? Array.isArray(schema)
    ? [organizationSchema, ...schema]
    : [organizationSchema, schema]
  : [organizationSchema];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Nurture</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Schema.org structured data -->
    {allSchemas.map(s => (
      <script type="application/ld+json" set:html={JSON.stringify(s)} />
    ))}
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
