  @media (max-width: 600px) { .feature-header, .feature-row { grid-template-columns: 1.5fr 1fr 1fr; } .feature-label { padding: 0.75rem 1rem; font-size: 0.85rem; } .feature-check { padding: 0.75rem 0.5rem; font-size: 1rem; } .plan-name { font-size: 0.9rem; } .plan-rate { font-size: 1.25rem; } .feature-category { padding: 0.5rem 1rem; font-size: 0.8rem; } }
</style>
