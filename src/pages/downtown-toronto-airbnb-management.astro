    color: var(--color-text-light);
    margin: 0 auto 2rem;
    text-align: center;
    max-width: 600px;
  }

  .hero-stats {
    display: flex;
    justify-content: center;
    gap: 4rem;
    margin: 3rem 0;
  }

  .stat { text-align: center; }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-primary);
  }

  .stat-label {
    color: var(--color-text-light);
    font-size: 0.9rem;
  }

  .neighborhoods-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .neighborhood-card {
    background: white;
    padding: 2rem;
    border-radius: 16px;
    box-shadow: var(--shadow-md);
    border-top: 4px solid var(--color-primary);
    transition: transform 0.3s ease;
  }

  .neighborhood-card:hover {
    transform: translateY(-5px);
  }

  .neighborhood-card h3 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
  }

  .neighborhood-card p {
    color: var(--color-text-light);
    margin-bottom: 1rem;
    line-height: 1.7;
  }

  .avg-revenue {
    background: var(--color-background-alt);
    padding: 0.75rem 1rem;
    border-radius: 8px;
