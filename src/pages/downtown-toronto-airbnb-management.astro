    margin-bottom: 3rem;
  }

  .bylaw-card {
    background: white;
    padding: 2rem;
    border-radius: 16px;
    box-shadow: var(--shadow-sm);
  }

  .bylaw-card h3 {
    color: var(--color-primary);
    margin-bottom: 1rem;
