    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
  }

  .service-item {
    background: white;
    padding: 1.25rem 1.5rem;
    border-radius: 10px;
    display: flex;
    align-items: center;
    gap: 1rem;
    box-shadow: var(--shadow-sm);
  }

  .service-check {
    color: var(--color-primary);
    font-size: 1.25rem;
    font-weight: 700;
  }

  .cta-section {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    padding: 5rem 0;
    text-align: center;
    color: white;
  }

  .cta-content h2 {
    margin-bottom: 1rem;
  }

  .cta-content > p {
    font-size: 1.25rem;
    opacity: 0.9;
    margin-bottom: 2rem;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-section .btn {
    background: white;
    color: var(--color-primary);
  }

  .cta-section .btn:hover {
    background: var(--color-background-alt);
  }

  .cta-note {
    margin-top: 1.5rem;
    font-size: 0.95rem;
    opacity: 0.9;
  }

  @media (max-width: 968px) {
    .neighborhoods-grid, .services-grid { grid-template-columns: repeat(2, 1fr); }
    .why-grid, .bylaws-grid { grid-template-columns: 1fr; }
  }

  @media (max-width: 576px) {
    .hero-stats { flex-direction: column; gap: 2rem; }
    .neighborhoods-grid, .services-grid { grid-template-columns: 1fr; }
  }
</style>
