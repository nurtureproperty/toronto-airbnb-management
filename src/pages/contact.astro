<style>
  .form-hero {
    background: linear-gradient(135deg, var(--color-primary-dark) 0%, var(--color-primary) 100%);
    color: white;
    padding: 2.5rem 0 4rem;
    text-align: center;
  }

  .form-hero-content {
    max-width: 700px;
    margin: 0 auto;
  }

  .form-hero h1 {
    font-size: clamp(1.75rem, 3vw, 2.25rem);
    margin-bottom: 0.5rem;
  }

  .form-hero p {
    font-size: 1.1rem;
    opacity: 0.9;
    margin-bottom: 1rem;
  }

  .hero-benefits {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .hero-benefits span {
    font-weight: 500;
    opacity: 0.95;
  }

  .form-section {
    margin-top: -2rem;
    padding-bottom: 3rem;
  }

  .form-card {
    max-width: 700px;
    margin: 0 auto;
    background: white;
    border-radius: 16px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
    padding: 1.5rem;
    overflow: hidden;
  }

  .contact-details {
    background: var(--color-background-alt);
    padding: 3rem 0;
  }

  .contact-bar {
    display: flex;
    justify-content: center;
    gap: 4rem;
    flex-wrap: wrap;
  }

  .contact-bar-item {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .contact-bar-icon {
    font-size: 1.75rem;
  }

  .contact-bar-item strong {
    display: block;
    font-size: 0.85rem;
    color: var(--color-text-muted);
    margin-bottom: 0.25rem;
  }

  .contact-bar-item a,
  .contact-bar-item span {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--color-text);
    text-decoration: none;
  }

  .contact-bar-item a:hover {
    color: var(--color-primary);
  }

  .learn-more-section {
    padding: 3rem 0;
    background: white;
  }

  .learn-more-section h3 {
    text-align: center;
    margin-bottom: 2rem;
    color: var(--color-text-light);
  }

  .learn-more-links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    max-width: 900px;
    margin: 0 auto;
  }

  .learn-link {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1.5rem;
    background: var(--color-background-alt);
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.3s ease;
    border: 1px solid transparent;
  }

  .learn-link:hover {
    border-color: var(--color-primary);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .learn-icon {
    font-size: 1.5rem;
  }

  .learn-link strong {
    color: var(--color-text);
    display: block;
    margin-bottom: 0.25rem;
  }

  .learn-link p {
    color: var(--color-text-light);
    font-size: 0.9rem;
    margin: 0;
  }

  @media (max-width: 768px) {
    .form-hero {
      padding: 2rem 0 3rem;
    }

    .hero-benefits {
      flex-direction: column;
      gap: 0.75rem;
    }

    .form-card {
      padding: 1rem;
      margin: 0 1rem;
    }

    .contact-bar {
      flex-direction: column;
      gap: 2rem;
      align-items: center;
    }

    .learn-more-links {
      grid-template-columns: 1fr;
    }
  }
</style>
