---
import Layout from '../../layouts/Layout.astro';

const pageTitle = "Airbnb Key Exchange & Check-In Services Toronto & GTA";
const pageDescription = "Seamless Airbnb key exchange across the Greater Toronto Area. Smart locks, lockboxes, lockout support. Serving Toronto, Mississauga, Vaughan, Markham, Brampton & more.";

const keyExchangeOptions = [
  {
    title: "Smart Lock",
    description: "Keyless entry with unique codes for each guest. Our recommended solution for modern hosting.",
    recommended: true,
    pros: [
      "Unique code per guest",
      "No physical key to lose",
      "Remote access management",
      "Entry/exit logging"
    ]
  },
  {
    title: "Lockbox",
    description: "Secure combination box mounted near entry. Reliable backup option.",
    recommended: false,
    pros: [
      "Low cost solution",
      "No batteries needed",
      "Change code easily",
      "Reliable backup"
    ]
  }
];

const steps = [
  { number: '1', title: 'We Assess Your Property', description: 'We evaluate your door type, building requirements, and guest volume to recommend the best access solution.' },
  { number: '2', title: 'Setup Access', description: 'Based on our consultation, you set up your smart lock or lockbox. We guide you through the entire process.' },
  { number: '3', title: 'Automated Guest Codes', description: 'Unique access codes generated for each booking. Codes automatically expire after checkout.' },
  { number: '4', title: 'Seamless Check-Ins', description: 'Guests receive clear instructions with photos. We monitor every arrival and provide lockout support.' }
];

const tips = [
  {
    title: "Send Instructions Early",
    content: "Send check-in instructions 24 hours before AND 2 hours before arrival. Include photos of the entry process for a stress-free arrival."
  },
  {
    title: "Always Have a Backup",
    content: "Smart locks can fail. Always have a lockbox with a physical key as backup. We check batteries during every turnover cleaning."
  },
  {
    title: "Test Before Every Guest",
    content: "Verify the access code works before each arrival. A 30-second test prevents frustrated guests and bad reviews."
  }
];

const faqs = [
  { q: "What's the best key exchange method for Airbnb?", a: "Smart locks are our top recommendation for most hosts. They allow unique codes per guest, remote management, and eliminate lost key issues. We recommend August, Schlage, or Yale smart locks for reliability." },
  { q: "Do I need to be present for every guest check-in?", a: "No. With smart locks or lockboxes, guests can self-check-in at any time. We handle code generation and guest communication, so you never need to meet guests unless you want to." },
  { q: "What happens if a guest gets locked out?", a: "Our emergency support team responds in under 9 minutes on average. We can remotely generate new codes, dispatch a team member with backup keys, or coordinate with your building's concierge." },
  { q: "Will my condo building allow smart locks?", a: "Not all condo buildings allow smart locks, so you'll need to check with your condo board first. If smart locks aren't permitted, we recommend the lockbox method or arranging key handover through your building's concierge if allowed." },
  { q: "How do you handle key fobs for condo buildings?", a: "We coordinate with your building's concierge or management to arrange fob access for guests. This can include concierge handoff or lockbox storage." },
  { q: "What if my door isn't compatible with smart locks?", a: "We assess your door type during our free consultation. Most standard doors work with smart locks. For incompatible doors, we recommend lockboxes as a reliable alternative." }
];

const relatedServices = [
  { name: 'Full Management', href: '/services/full-airbnb-management', description: 'Complete hands-off hosting' },
  { name: 'Turnover Management', href: '/services/airbnb-turnover-management', description: 'End-to-end guest transitions' },
  { name: 'Cleaning Services', href: '/services/airbnb-cleaning', description: 'Professional turnover cleaning' },
  { name: 'Emergency Support', href: '/emergency-airbnb-support-toronto', description: '24/7 crisis response' },
  { name: 'Property Maintenance', href: '/services/airbnb-property-maintenance', description: 'Repairs and upkeep' },
  { name: 'Improve Revenue', href: '/toronto-airbnb-not-making-money', description: 'Fix underperforming listings' }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <section class="hero hero-small">
    <div class="container">
      <h1>Airbnb Key Exchange & Check-In</h1>
      <p class="hero-subtitle">Seamless guest access solutions across the Greater Toronto Area: smart locks, lockboxes, and lockout support.</p>
    </div>
  </section>

  <section class="trust-bar">
    <div class="container">
      <div class="trust-grid">
        <div class="trust-item">
          <span class="trust-number">9 min</span>
          <span class="trust-label">Lockout Response</span>
        </div>
        <div class="trust-item">
          <span class="trust-number">Unique</span>
          <span class="trust-label">Guest Codes</span>
        </div>
        <div class="trust-item">
          <span class="trust-number">Screened</span>
          <span class="trust-label">Guests</span>
        </div>
      </div>
    </div>
  </section>

  <section class="section intro-section">
    <div class="container">
      <div class="intro-content">
        <p class="intro-text">First impressions start at the door. A smooth check-in sets the tone for a 5-star stay, while a fumbled arrival can ruin even the most beautiful property. We ensure every guest enters effortlessly.</p>
        <ul class="feature-list">
          <li><span class="check">✓</span> Smart lock consultation and management</li>
          <li><span class="check">✓</span> Unique codes for every guest</li>
          <li><span class="check">✓</span> Lockout assistance</li>
          <li><span class="check">✓</span> Condo building coordination</li>
          <li><span class="check">✓</span> Backup key systems</li>
        </ul>
        <a href="/contact" class="btn btn-primary btn-large">Get Check-In Setup</a>
      </div>
    </div>
  </section>

  <section class="section info-section">
    <div class="container">
      <div class="info-grid">
        <div class="info-box highlight-box">
          <h3>Why Check-In Matters</h3>
          <p>Studies show that check-in experience is the #1 factor guests mention in reviews. A smooth arrival creates goodwill that lasts the entire stay, while a frustrating check-in puts guests in a negative mindset before they even see your property.</p>
        </div>
        <div class="info-box tip-box">
          <h3>Pro Tip: Redundancy is Key</h3>
          <p>Always have a backup access method. Smart lock batteries die, lockbox combinations get forgotten, and flights get delayed. We set up multiple access layers so guests never get stranded.</p>
        </div>
      </div>
    </div>
  </section>

  <section class="section options-section">
    <div class="container">
      <div class="section-header">
        <h2>Key Exchange Options</h2>
        <p class="serif">Choose the right access method for your property</p>
      </div>
      <div class="options-grid">
        {keyExchangeOptions.map((option) => (
          <div class={`option-card ${option.recommended ? 'recommended' : ''}`}>
            {option.recommended && <span class="recommended-badge">RECOMMENDED</span>}
            <h3>{option.title}</h3>
            <p class="option-description">{option.description}</p>
            <ul class="option-pros">
              {option.pros.map((pro) => (
                <li><span class="check-icon">✓</span> {pro}</li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section steps-section">
    <div class="container">
      <div class="section-header">
        <h2>How It Works</h2>
        <p class="serif">From setup to seamless guest arrivals</p>
      </div>
      <div class="steps-grid">
        {steps.map(step => (
          <div class="step-card">
            <div class="step-number">{step.number}</div>
            <h3>{step.title}</h3>
            <p>{step.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section tips-section">
    <div class="container">
      <div class="section-header">
        <h2>Tips for Smooth Check-Ins</h2>
        <p class="serif">Maximize guest satisfaction from the first moment</p>
      </div>
      <div class="tips-grid">
        {tips.map((tip) => (
          <div class="tip-card">
            <h3>{tip.title}</h3>
            <p>{tip.content}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section services-section">
    <div class="container">
      <div class="section-header">
        <h2>What We Handle</h2>
        <p class="serif">Complete check-in management included</p>
      </div>
      <div class="services-grid">
        <div class="service-card">
          <h3>Smart Lock Consultation</h3>
          <p>We recommend the best smart locks compatible with your door and building requirements, and guide you through setup.</p>
        </div>
        <div class="service-card">
          <h3>Code Management</h3>
          <p>Unique access codes generated automatically for each booking, with automatic expiration after checkout.</p>
        </div>
        <div class="service-card">
          <h3>Guest Communication</h3>
          <p>Clear check-in instructions with photos sent at the right times. Guests know exactly how to enter.</p>
        </div>
        <div class="service-card">
          <h3>Lockout Support</h3>
          <p>Emergency response for lockouts. New codes, backup keys, or on-site assistance within minutes.</p>
        </div>
        <div class="service-card">
          <h3>Condo Coordination</h3>
          <p>We handle key fob arrangements, concierge coordination, and building-specific access requirements.</p>
        </div>
        <div class="service-card">
          <h3>Battery Monitoring</h3>
          <p>Smart lock batteries checked during every turnover. No guest ever arrives to a dead lock.</p>
        </div>
      </div>
    </div>
  </section>

  <section class="section faq-section">
    <div class="container">
      <div class="section-header">
        <h2>Key Exchange FAQs</h2>
        <p class="serif">Common questions about Airbnb check-in</p>
      </div>
      <div class="faq-grid">
        {faqs.map(faq => (
          <div class="faq-item">
            <h3>{faq.q}</h3>
            <p>{faq.a}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section related-section">
    <div class="container">
      <div class="section-header">
        <h2>Related Services</h2>
        <p class="serif">Complete your guest experience</p>
      </div>
      <div class="related-grid">
        {relatedServices.map(service => (
          <a href={service.href} class="related-card">
            <h4>{service.name}</h4>
            <p>{service.description}</p>
            <span class="arrow">→</span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2>Never Worry About Check-Ins Again</h2>
        <p>From smart lock consultation to lockout support, we've got you covered.</p>
        <a href="tel:647-957-8956" class="btn btn-primary btn-large">Call Now: 647-957-8956</a>
        <p class="cta-note">Free consultation • No obligation • Same-day response</p>
      </div>
    </div>
  </section>
</Layout>

