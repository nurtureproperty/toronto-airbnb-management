---
// Airbnb Key Exchange Toronto - Service Page
// Targets: airbnb key exchange toronto, airbnb check-in service, smart lock installation
import Layout from '../../layouts/Layout.astro';

const pageTitle = "Airbnb Key Exchange & Check-In Services Toronto & GTA";
const pageDescription = "Seamless Airbnb key exchange across the Greater Toronto Area. Smart locks, lockboxes, in-person meet & greet, 24/7 lockout support. Serving Toronto, Mississauga, Vaughan, Markham, Brampton & more.";

const keyExchangeOptions = [
  {
    icon: "üîê",
    title: "Smart Lock",
    description: "Keyless entry with unique codes for each guest.",
    recommended: true,
    pros: [
      "Unique code per guest",
      "No physical key to lose",
      "Remote access management",
      "Entry/exit logging"
    ]
  },
  {
    icon: "üóùÔ∏è",
    title: "Lockbox",
    description: "Secure combination box mounted near entry.",
    recommended: false,
    pros: [
      "Low cost solution",
      "No batteries needed",
      "Change code easily",
      "Reliable backup"
    ]
  },
  {
    icon: "üëã",
    title: "In-Person Meet",
    description: "Personal greeting and property walkthrough.",
    recommended: false,
    pros: [
      "Personal touch",
      "Property orientation",
      "Premium experience",
      "Verify guest identity"
    ]
  }
];

const tips = [
  {
    number: 1,
    title: "Send Instructions Early",
    content: "Send check-in instructions 24 hours before AND 2 hours before arrival. Include photos of the entry process."
  },
  {
    number: 2,
    title: "Always Have a Backup",
    content: "Smart locks can fail. Always have a lockbox with a physical key as backup. We check batteries during every",
    linkText: "turnover cleaning",
    linkUrl: "/services/airbnb-cleaning-toronto"
  },
  {
    number: 3,
    title: "Test Before Every Guest",
    content: "Verify the access code works before each arrival. A 30-second test prevents frustrated guests."
  }
];

const relatedServices = [
  { title: "Full Management", url: "/services/full-airbnb-management-toronto" },
  { title: "Turnover Management", url: "/services/airbnb-turnover-management-toronto" },
  { title: "Emergency Support", url: "/emergency-airbnb-support-toronto" }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <section class="hero">
    <div class="container">
      <h1>Airbnb <span class="highlight">Key Exchange</span> & Check-In GTA</h1>
      <p class="hero-subtitle">Seamless guest access solutions across the Greater Toronto Area: smart locks, lockboxes, in-person greetings, and 24/7 lockout support. Serving Toronto, Mississauga, Vaughan, Markham, Brampton & more.</p>
      <a href="tel:647-957-8956" class="btn btn-primary btn-large">Get Started</a>
    </div>
  </section>

  <section class="trust-bar">
    <div class="container">
      <div class="trust-grid">
        <div class="trust-item">
          <span class="trust-number">9 min</span>
          <span class="trust-label">Lockout Response</span>
        </div>
        <div class="trust-item">
          <span class="trust-number">24/7</span>
          <span class="trust-label">Support Available</span>
        </div>
        <div class="trust-item">
          <span class="trust-number">100%</span>
          <span class="trust-label">Secure Access</span>
        </div>
        <div class="trust-item">
          <span class="trust-number">0</span>
          <span class="trust-label">Lost Key Issues</span>
        </div>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="options-grid">
        {keyExchangeOptions.map((option) => (
          <div class={`option-card ${option.recommended ? 'recommended' : ''}`}>
            <div class="option-icon">{option.icon}</div>
            <h3>{option.title}</h3>
            <p>{option.description}</p>
            <ul class="option-pros">
              {option.pros.map((pro) => (
                <li>‚úì {pro}</li>
              ))}
            </ul>
          </div>
        ))}
      </div>

      <div class="content-grid">
        <div class="main-content">
          <h2>Tips for Smooth Check-Ins</h2>

          {tips.map((tip) => (
            <div class="tip-box">
              <h4>Tip #{tip.number}: {tip.title}</h4>
              {tip.linkUrl ? (
                <p>{tip.content} <a href={tip.linkUrl} class="inline-link">{tip.linkText}</a>.</p>
              ) : (
                <p>{tip.content}</p>
              )}
            </div>
          ))}

          <h3>24/7 Lockout Support</h3>
          <p>Our <a href="/emergency-airbnb-support-toronto" class="inline-link">emergency support</a> includes 24/7 lockout assistance with 9-minute average response time.</p>

          <h3>Condo Building Coordination</h3>
          <p>We handle key fob arrangements, concierge coordination, and building-specific access requirements for all <a href="/downtown-toronto-airbnb-management" class="inline-link">Downtown Toronto</a> and GTA condos.</p>
        </div>

        <aside class="sidebar">
          <div class="sidebar-card sidebar-card-cta">
            <h4>Need Help?</h4>
            <p>We will set up the perfect check-in system.</p>
            <a href="tel:647-957-8956" class="btn btn-secondary sidebar-btn">Call 647-957-8956</a>
          </div>
          <div class="sidebar-card">
            <h4>Related Services</h4>
            <ul class="related-list">
              {relatedServices.map((service) => (
                <li><a href={service.url}>{service.title}</a></li>
              ))}
            </ul>
          </div>
        </aside>
      </div>
    </div>
  </section>

  <section class="section related-section">
    <div class="container">
      <div class="section-header">
        <h2>Complete Your Guest Experience</h2>
        <p>Services that pair perfectly with seamless check-ins</p>
      </div>
      <div class="related-grid">
        <a href="/services/airbnb-turnover-management-toronto" class="related-card">
          <h4>Turnover Management</h4>
          <p>End-to-end guest transition coordination</p>
          <span class="arrow">‚Üí</span>
        </a>
        <a href="/services/airbnb-cleaning-toronto" class="related-card">
          <h4>Cleaning Services</h4>
          <p>5-star cleanliness guaranteed</p>
          <span class="arrow">‚Üí</span>
        </a>
        <a href="/services/full-airbnb-management-toronto" class="related-card">
          <h4>Full Management</h4>
          <p>Hands-off hosting - we do everything</p>
          <span class="arrow">‚Üí</span>
        </a>
        <a href="/services/airbnb-property-maintenance-toronto" class="related-card">
          <h4>Property Maintenance</h4>
          <p>24/7 repairs and emergency support</p>
          <span class="arrow">‚Üí</span>
        </a>
        <a href="/services/airbnb-dynamic-pricing-toronto" class="related-card">
          <h4>Dynamic Pricing</h4>
          <p>AI-powered rate optimization</p>
          <span class="arrow">‚Üí</span>
        </a>
        <a href="/services/short-term-rental-management-toronto" class="related-card">
          <h4>STR Management</h4>
          <p>Short-term rental expertise</p>
          <span class="arrow">‚Üí</span>
        </a>
      </div>
    </div>
  </section>

  <section class="cta-section">
    <div class="container">
      <h2>Never Worry About Check-Ins Again</h2>
      <p>From smart lock installation to 24/7 lockout support - we have got you covered.</p>
      <a href="tel:647-957-8956" class="btn btn-secondary btn-large">Call Now: 647-957-8956</a>
    </div>
  </section>
</Layout>

<style>
  .trust-bar {
    background: var(--color-primary-dark);
    padding: 1.5rem 0;
  }

  .trust-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    text-align: center;
  }

  .trust-item {
    color: white;
  }

  .trust-number {
    display: block;
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 0.25rem;
  }

  .trust-label {
    font-size: 0.875rem;
    opacity: 0.9;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-header h2 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .section-header p {
    color: var(--color-text-light);
    font-size: 1.1rem;
  }

  .related-section {
    background: var(--color-background-alt);
    padding: 5rem 0;
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .related-card {
    background: white;
    padding: 1.5rem;
    border-radius: 12px;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
    position: relative;
  }

  .related-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
  }

  .related-card h4 {
    font-family: 'DM Sans', sans-serif;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--color-primary-dark);
  }

  .related-card p {
    font-size: 0.9rem;
    color: var(--color-text-light);
    margin: 0;
  }

  .related-card .arrow {
    position: absolute;
    right: 1.5rem;
    top: 50%;
    transform: translateY(-50%);
    color: var(--color-primary);
    font-size: 1.25rem;
  }

  .hero {
    padding: 5rem 2rem;
    background: linear-gradient(135deg, var(--color-background-alt) 0%, var(--color-background) 100%);
    text-align: center;
  }

  .hero h1 {
    font-size: clamp(2rem, 5vw, 3rem);
    margin-bottom: 1.5rem;
  }

  .hero .highlight {
    color: var(--color-primary-dark);
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--color-text-light);
    margin-bottom: 2rem;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .options-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin: 3rem 0;
  }

  .option-card {
    background: white;
    padding: 2rem;
    border-radius: 15px;
    box-shadow: var(--shadow-md);
    text-align: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .option-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .option-card.recommended {
    border: 3px solid var(--color-primary);
    position: relative;
  }

  .option-card.recommended::before {
    content: 'RECOMMENDED';
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--color-primary);
    color: white;
    padding: 0.25rem 1rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .option-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .option-card h3 {
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .option-card p {
    color: var(--color-text-light);
    margin-bottom: 1rem;
  }

  .option-pros {
    text-align: left;
    font-size: 0.9rem;
    list-style: none;
    padding: 0;
  }

  .option-pros li {
    color: var(--color-primary-dark);
    margin-bottom: 0.5rem;
  }

  .content-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 4rem;
    margin-top: 3rem;
  }

  .main-content h2,
  .main-content h3 {
    color: var(--color-text);
    margin: 2rem 0 1rem;
  }

  .main-content h2 {
    margin-top: 0;
  }

  .main-content p {
    color: var(--color-text-light);
    line-height: 1.8;
    margin-bottom: 1rem;
  }

  .inline-link {
    color: var(--color-primary-dark);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .inline-link:hover {
    color: var(--color-primary);
    text-decoration: underline;
  }

  .tip-box {
    background: var(--color-primary-light);
    border-left: 4px solid var(--color-primary);
    padding: 1.5rem;
    margin: 2rem 0;
    border-radius: 0 10px 10px 0;
  }

  .tip-box h4 {
    color: var(--color-primary-dark);
    margin-bottom: 0.5rem;
    font-style: normal;
    font-family: 'DM Sans', sans-serif;
    font-weight: 600;
  }

  .tip-box p {
    margin-bottom: 0;
  }

  .sidebar {
    position: sticky;
    top: 100px;
  }

  .sidebar-card {
    background: white;
    padding: 2rem;
    border-radius: 15px;
    box-shadow: var(--shadow-md);
    margin-bottom: 2rem;
  }

  .sidebar-card-cta {
    background: var(--color-primary);
    color: white;
  }

  .sidebar-card-cta h4,
  .sidebar-card-cta p {
    color: white;
  }

  .sidebar-card h4 {
    margin-bottom: 1rem;
    font-style: normal;
    font-family: 'DM Sans', sans-serif;
    font-weight: 600;
  }

  .sidebar-card p {
    margin-bottom: 1rem;
  }

  .sidebar-btn {
    display: block;
    text-align: center;
    background: white;
    color: var(--color-primary-dark);
  }

  .sidebar-btn:hover {
    background: var(--color-background-alt);
  }

  .related-list {
    list-style: none;
    padding: 0;
  }

  .related-list li {
    padding: 0.5rem 0;
    border-bottom: 1px solid var(--color-border);
  }

  .related-list li:last-child {
    border-bottom: none;
  }

  .related-list a {
    color: var(--color-primary-dark);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .related-list a:hover {
    color: var(--color-primary);
  }

  .cta-section {
    padding: 5rem 2rem;
    background: var(--color-primary);
    color: white;
    text-align: center;
  }

  .cta-section h2 {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    margin-bottom: 1rem;
  }

  .cta-section p {
    margin-bottom: 2rem;
    font-size: 1.125rem;
    opacity: 0.9;
  }

  .cta-section .btn-secondary {
    background: white;
    color: var(--color-primary-dark);
    border-color: white;
  }

  .cta-section .btn-secondary:hover {
    background: var(--color-background-alt);
    border-color: var(--color-background-alt);
  }

  @media (max-width: 1024px) {
    .content-grid,
    .options-grid {
      grid-template-columns: 1fr;
    }

    .sidebar {
      position: static;
    }

    .trust-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .related-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2rem;
    }

    .related-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 576px) {
    .trust-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    .trust-number {
      font-size: 1.5rem;
    }
  }
</style>
