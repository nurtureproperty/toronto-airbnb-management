    font-family: 'DM Sans', sans-serif;
    font-weight: 600;
    font-size: 1.1rem;
    margin: 0 0 0.75rem;
  }

  .faq-card p {
    color: var(--color-text-light);
    margin: 0;
    font-size: 0.95rem;
    line-height: 1.6;
  }

  .related-section {
    background: white;
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .related-card {
    background: var(--color-background-alt);
    padding: 1.5rem;
    border-radius: 12px;
    text-decoration: none;
