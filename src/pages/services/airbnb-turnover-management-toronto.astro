    color: white;
  }

  .trust-number {
    display: block;
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 0.25rem;
  }

  .trust-label {
    font-size: 0.875rem;
    opacity: 0.9;
  }

  .intro-section {
    background: white;
  }

  .intro-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .intro-text {
    font-size: 1.25rem;
    color: var(--color-text-light);
    margin-bottom: 2rem;
    line-height: 1.8;
  }

  .feature-list {
    list-style: none;
    padding: 0;
    margin: 0 0 2rem;
    display: inline-block;
    text-align: left;
  }

  .feature-list li {
    padding: 0.5rem 0;
    font-size: 1.1rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .check {
    color: var(--color-primary);
    font-weight: 700;
    font-size: 1.25rem;
  }

  .example-section {
    background: var(--color-background-alt);
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-header h2 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .section-header p {
    color: var(--color-text-light);
    font-size: 1.1rem;
  }

  .example-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    max-width: 900px;
