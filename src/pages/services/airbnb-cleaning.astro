  { title: 'Owner-Supplied Linens', description: 'You provide linens, we wash on-site or take to professional laundry.' },
  { title: 'Hybrid Approach', description: 'You provide backup sets, we rotate and wash between guests.' }
];

const restockingItems = [
  'Toilet paper (premium quality)',
  'Paper towels',
  'Hand soap and dish soap',
  'Shampoo, conditioner, body wash',
  'Coffee, tea, and basic snacks',
  'Garbage bags and cleaning supplies'
];

const relatedServices = [
