---
import Layout from '../../layouts/Layout.astro';

const services = [
  { title: 'Emergency Repairs', description: 'Response for floods, no heat/AC, lockouts, and safety issues. Under 3-hour dispatch.', emergency: true },
  { title: 'Routine Maintenance', description: 'Scheduled repairs, touchups, and fixes coordinated during turnovers.' },
  { title: 'Preventive Care', description: 'Quarterly HVAC service, drain clearing, battery replacement, and inspections.' },
  { title: 'Appliance Repair', description: 'Fridge, dishwasher, washer, dryer, microwave — all major appliances covered.' },
  { title: 'Lock & Security', description: 'Smart lock troubleshooting, battery replacement, lockout assistance, re-keying.' },
  { title: 'Vendor Management', description: 'We coordinate quotes, schedule work, and supervise all contractor visits.' }
];

const steps = [
  { number: '1', title: 'Report the Issue', description: 'Call our line or message us. Describe the problem and we assess urgency immediately.' },
  { number: '2', title: 'We Dispatch', description: 'We contact the right contractor from our vetted network and coordinate access to your property.' },
  { number: '3', title: 'Problem Resolved', description: 'Contractor completes the repair. We supervise, communicate with guests, and verify completion.' },
  { number: '4', title: 'Documentation', description: 'You receive photos, invoices, and a full report. We handle any insurance claims if needed.' }
];

const tips = [
  {
    title: "Schedule Quarterly HVAC Checks",
    content: "AC failures happen most often in summer heat waves — the worst possible time. Quarterly maintenance catches problems before peak demand. A $100 service call prevents a $1,000+ emergency."
  },
  {
    title: "Clear Drains Monthly",
    content: "Hair buildup is the #1 cause of clogged drains. Pour boiling water mixed with baking soda and vinegar down drains monthly."
  },
  {
    title: "Keep Spare Batteries",
    content: "Smart locks, smoke detectors, and TV remotes all need batteries. Dead batteries cause lockouts and angry guests. We check and replace batteries during every turnover."
  }
];

const commonIssues = [
  { category: 'Plumbing', issues: 'Clogged toilets, slow drains, leaky faucets, running toilets' },
  { category: 'HVAC', issues: 'AC not cooling, furnace not heating, thermostat issues' },
  { category: 'Appliances', issues: 'Fridge, dishwasher, washer/dryer, microwave repairs' },
  { category: 'Electrical', issues: 'Tripped breakers, outlet issues, light fixtures' },
  { category: 'Locks/Security', issues: 'Smart lock issues, lockouts, door repairs' },
  { category: 'General', issues: 'Blinds, cabinet doors, loose fixtures, paint touchups' }
];

const faqs = [
  { q: "How fast can you respond to emergencies?", a: "For true emergencies like floods, no heat in winter, or safety issues, we dispatch contractors within 3 hours. Urgent issues like broken AC or appliances are handled same-day." },
  { q: "Do I need to be present for repairs?", a: "No. We coordinate access with smart locks, lockboxes, or building concierge. We supervise the work and send you photos and updates throughout." },
  { q: "How do you handle condo building repairs?", a: "We coordinate with building management for suite entry, HVAC issues requiring engineer access, water shutoffs, and after-hours emergencies requiring concierge assistance." },
  { q: "How much does maintenance cost?", a: "You pay the contractor's rate directly — we don't mark up repair costs. Our management fee covers coordination, supervision, and vendor management." },
  { q: "What areas do you cover?", a: "We have contractors across Southern Ontario including Toronto, Mississauga, Brampton, Vaughan, Markham, Hamilton, and surrounding areas." },
  { q: "Can you handle after-hours emergencies?", a: "Yes. Our emergency line is available for urgent issues like floods, no heat, or lockouts. We dispatch contractors as quickly as possible regardless of the time." }
];

const relatedServices = [
  { name: 'Emergency Support', href: '/emergency-airbnb-support-toronto', description: 'Crisis response' },
  { name: 'Turnover Management', href: '/services/airbnb-turnover-management-toronto', description: 'Seamless guest transitions' },
  { name: 'Cleaning Services', href: '/services/airbnb-cleaning-toronto', description: 'Professional turnover cleaning' },
  { name: 'Key Exchange', href: '/services/airbnb-key-exchange-toronto', description: 'Smart locks and access' },
  { name: 'Full Management', href: '/services/full-airbnb-management-toronto', description: 'Complete hands-off hosting' },
  { name: 'Improve Revenue', href: '/toronto-airbnb-not-making-money', description: 'Fix underperforming listings' }
];
---

<Layout title="Airbnb Property Maintenance Toronto & GTA | Repairs" description="Airbnb property maintenance in Toronto and the Greater Toronto Area. Emergency repairs, routine upkeep, trusted contractor network. Protect your investment and keep guests happy.">
  <section class="hero hero-small">
    <div class="container">
      <h1>Airbnb Property Maintenance</h1>
      <p class="hero-subtitle">Emergency repairs and routine maintenance. Protect your investment, keep guests happy, and never scramble to find a contractor again.</p>
    </div>
  </section>

  <section class="trust-bar">
    <div class="container">
      <div class="trust-grid">
        <div class="trust-item">
          <span class="trust-number">3hr</span>
          <span class="trust-label">Emergency Response</span>
        </div>
        <div class="trust-item">
          <span class="trust-number">40+</span>
          <span class="trust-label">Vetted Contractors</span>
        </div>
        <div class="trust-item">
          <span class="trust-number">Southern Ontario</span>
          <span class="trust-label">Wide Coverage</span>
        </div>
      </div>
    </div>
  </section>

  <section class="section intro-section">
    <div class="container">
      <div class="intro-content">
        <p class="intro-text">With short-term rentals, maintenance emergencies don't wait for business hours. A clogged toilet at midnight can mean a cancelled booking and a 1-star review. Our contractor network keeps you protected.</p>
        <ul class="feature-list">
          <li><span class="check">✓</span> Emergency repairs under 3 hours</li>
          <li><span class="check">✓</span> Vetted contractors</li>
          <li><span class="check">✓</span> All major appliances covered</li>
          <li><span class="check">✓</span> Vendor coordination included</li>
          <li><span class="check">✓</span> Southern Ontario coverage</li>
        </ul>
        <a href="/contact" class="btn btn-primary btn-large">Get Maintenance Quote</a>
      </div>
    </div>
  </section>

  <section class="section info-section">
    <div class="container">
      <div class="info-grid">
        <div class="info-box highlight-box">
          <h3>Why Airbnb Maintenance is Different</h3>
          <p>With traditional rentals, you can schedule repairs at your convenience. With Airbnb, a clogged toilet at 11pm means an angry guest, a bad review, and potentially a cancelled booking. Speed matters — our network responds in hours, not days.</p>
        </div>
        <div class="info-box tip-box">
          <h3>Pro Tip: Build Your Network Now</h3>
          <p>Don't wait for an emergency to find a plumber. With our management, you get instant access to vetted contractors across Downtown Toronto, North York, Mississauga, and all GTA areas.</p>
        </div>
      </div>
    </div>
  </section>

  <section class="section services-section">
    <div class="container">
      <div class="section-header">
        <h2>Maintenance Services</h2>
        <p class="serif">Comprehensive property care for Airbnb hosts</p>
      </div>
      <div class="services-grid">
        {services.map(service => (
          <div class={`service-card ${service.emergency ? 'emergency' : ''}`}>
            <h3>{service.title}</h3>
            <p>{service.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section steps-section">
    <div class="container">
      <div class="section-header">
        <h2>How It Works</h2>
        <p class="serif">From issue to resolution</p>
      </div>
      <div class="steps-grid">
        {steps.map(step => (
          <div class="step-card">
            <div class="step-number">{step.number}</div>
            <h3>{step.title}</h3>
            <p>{step.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section issues-section">
    <div class="container">
      <div class="section-header">
        <h2>Common Airbnb Maintenance Issues</h2>
        <p class="serif">We handle all of these and more</p>
      </div>
      <div class="issues-grid">
        {commonIssues.map(item => (
          <div class="issue-card">
            <h3>{item.category}</h3>
            <p>{item.issues}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section tips-section">
    <div class="container">
      <div class="section-header">
        <h2>Preventive Maintenance Tips</h2>
        <p class="serif">Avoid emergencies with proactive care</p>
      </div>
      <div class="tips-grid">
        {tips.map((tip) => (
          <div class="tip-card">
            <h3>{tip.title}</h3>
            <p>{tip.content}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section response-section">
    <div class="container">
      <div class="section-header">
        <h2>Response Time Standards</h2>
        <p class="serif">We prioritize based on urgency</p>
      </div>
      <div class="response-table">
        <div class="response-row header">
          <span class="response-type">Issue Type</span>
          <span class="response-time">Response Time</span>
        </div>
        <div class="response-row">
          <span class="response-type">Emergency (flood, no heat, lockout)</span>
          <span class="response-time">Under 3 hours</span>
        </div>
        <div class="response-row">
          <span class="response-type">Urgent (AC out, appliance broken)</span>
          <span class="response-time">Same day</span>
        </div>
        <div class="response-row">
          <span class="response-type">Routine (cosmetic, minor repairs)</span>
          <span class="response-time">Next available turnover</span>
        </div>
      </div>
    </div>
  </section>

  <section class="section faq-section">
    <div class="container">
      <div class="section-header">
        <h2>Maintenance FAQs</h2>
        <p class="serif">Common questions about property maintenance</p>
      </div>
      <div class="faq-grid">
        {faqs.map(faq => (
          <div class="faq-item">
            <h3>{faq.q}</h3>
            <p>{faq.a}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section related-section">
    <div class="container">
      <div class="section-header">
        <h2>Related Services</h2>
        <p class="serif">Complete your property care</p>
      </div>
      <div class="related-grid">
        {relatedServices.map(service => (
          <a href={service.href} class="related-card">
            <h4>{service.name}</h4>
            <p>{service.description}</p>
            <span class="arrow">→</span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2>Never Scramble for a Contractor Again</h2>
        <p>Our maintenance network protects your property.</p>
        <a href="tel:647-957-8956" class="btn btn-primary btn-large">Call Now: 647-957-8956</a>
        <p class="cta-note">Free consultation • No obligation • Same-day response</p>
      </div>
    </div>
  </section>
</Layout>

