    margin: 1.5rem 0;
    border-radius: 0 10px 10px 0;
  }

  .tip-box h4 {
    color: var(--color-primary-dark);
    margin-bottom: 0.5rem;
    font-family: DM Sans, sans-serif;
    font-style: normal;
    font-weight: 600;
  }

  .tip-box p {
    margin: 0;
    color: var(--color-text-light);
  }

  .checklist-box {
    background: white;
    padding: 2rem;
    border-radius: 15px;
    box-shadow: var(--shadow-md);
    margin: 2rem 0;
  }

  .checklist-box h4 {
    font-size: 1.25rem;
    margin-bottom: 1.5rem;
    color: var(--color-text);
    font-family: DM Sans, sans-serif;
    font-style: normal;
    font-weight: 600;
  }

  .checklist-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  .checklist-item {
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
  }

  .checklist-item .check {
    color: var(--color-primary);
    font-weight: 700;
    flex-shrink: 0;
  }

  .sidebar {
    position: sticky;
    top: 100px;
  }

  .sidebar-card {
    background: white;
    padding: 1.5rem;
    border-radius: 15px;
    box-shadow: var(--shadow-md);
    margin-bottom: 1.5rem;
  }

  .sidebar-card h4 {
    font-size: 1.1rem;
    margin-bottom: 1rem;
    color: var(--color-text);
    font-family: DM Sans, sans-serif;
    font-style: normal;
    font-weight: 600;
  }

  .sidebar-card ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .sidebar-card li {
    padding: 0.5rem 0;
    border-bottom: 1px solid var(--color-border);
  }

  .sidebar-card li:last-child {
    border-bottom: none;
  }

  .sidebar-card a {
    color: var(--color-primary-dark);
    text-decoration: none;
    font-weight: 500;
  }

  .sidebar-card a:hover {
    text-decoration: underline;
  }

  .sidebar-cta {
    background: var(--color-primary);
    color: white;
  }

  .sidebar-cta h4 {
    color: white;
  }

  .sidebar-cta p {
    margin-bottom: 1rem;
    opacity: 0.9;
  }

  .sidebar-cta .btn {
    display: block;
    text-align: center;
    background: white;
    color: var(--color-primary-dark);
  }

  .sidebar-cta .btn:hover {
    background: var(--color-background-alt);
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-top: 4rem;
  }

  .service-card {
    background: white;
    padding: 2rem;
    border-radius: 15px;
    box-shadow: var(--shadow-md);
    border-left: 4px solid var(--color-primary);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .service-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .service-card h3 {
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
    color: var(--color-text);
    font-family: 'Poppins', sans-serif;
    font-weight: 600;
  }

  .service-card p {
    color: var(--color-text-light);
    font-size: 0.95rem;
    line-height: 1.6;
  }

  .cta-section {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    padding: 5rem 0;
    text-align: center;
    color: white;
  }

  .cta-section h2 {
    margin-bottom: 1rem;
  }

  .cta-section p {
    font-size: 1.25rem;
    margin-bottom: 2rem;
    opacity: 0.95;
  }

  .cta-section .btn {
    background: white;
    color: var(--color-primary-dark);
  }

  .cta-section .btn:hover {
    background: var(--color-background-alt);
  }

  @media (max-width: 1024px) {
    .content-grid {
      grid-template-columns: 1fr;
    }

    .sidebar {
      position: static;
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }

    .sidebar-card {
      margin-bottom: 0;
    }

    .services-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .checklist-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .trust-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .related-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .sidebar {
      grid-template-columns: 1fr;
    }

    .services-grid {
      grid-template-columns: 1fr;
    }

    .checklist-grid {
      grid-template-columns: 1fr;
    }

    .related-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 576px) {
    .trust-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    .trust-number {
      font-size: 1.5rem;
    }
  }
</style>
