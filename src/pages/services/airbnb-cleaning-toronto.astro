  }

  .restocking-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .restocking-item .check {
    color: var(--color-primary);
    font-weight: 700;
  }

  .sameday-section {
    background: white;
  }

  .sameday-content {
    max-width: 900px;
    margin: 0 auto;
  }

  .sameday-content > p {
    text-align: center;
    font-size: 1.1rem;
    color: var(--color-text-light);
    margin-bottom: 2rem;
    line-height: 1.7;
  }

  .sameday-content > p a {
    color: var(--color-primary);
    text-decoration: underline;
  }

  .sameday-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .sameday-item {
    text-align: center;
    padding: 1.5rem;
    background: var(--color-background-alt);
    border-radius: 12px;
  }

  .sameday-icon {
    font-size: 2rem;
    display: block;
    margin-bottom: 0.75rem;
  }

  .sameday-item h4 {
    font-size: 1rem;
    margin-bottom: 0.5rem;
    font-family: 'Poppins', sans-serif;
    font-weight: 600;
  }

  .sameday-item p {
    font-size: 0.85rem;
    color: var(--color-text-light);
    margin: 0;
  }

  .tips-section {
    background: var(--color-background-alt);
  }

  .tips-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .tip-card {
    background: #E8F5E9;
    padding: 2rem;
    border-radius: 12px;
    border-left: 4px solid var(--color-primary);
  }

  .tip-card h3 {
    font-size: 1.1rem;
    margin-bottom: 0.75rem;
    font-family: 'Poppins', sans-serif;
    font-weight: 600;
    color: var(--color-primary-dark);
  }

  .tip-card p {
    color: #555;
    font-size: 0.9rem;
    line-height: 1.6;
    margin: 0;
  }

  .areas-section {
    background: white;
  }

  .areas-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
  }

  .area-tag {
    background: var(--color-background-alt);
    padding: 0.75rem 1.5rem;
    border-radius: 50px;
    font-size: 0.95rem;
    color: var(--color-text);
    border: 1px solid var(--color-border);
  }

  .related-section {
    background: var(--color-background-alt);
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
