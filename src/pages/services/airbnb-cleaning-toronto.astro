    .trust-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    .trust-number {
      font-size: 1.5rem;
    }

    .services-grid {
      grid-template-columns: 1fr;
    }

    .sameday-grid {
      grid-template-columns: 1fr;
    }

