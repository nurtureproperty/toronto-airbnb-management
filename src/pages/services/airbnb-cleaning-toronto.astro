    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    padding: 0.5rem 0;
  }

  .checklist-item .check {
    color: var(--color-primary);
    font-weight: 700;
    flex-shrink: 0;
  }

  .linen-section {
    background: white;
  }

  .linen-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .linen-card {
    background: var(--color-background-alt);
    padding: 1.5rem;
    border-radius: 12px;
    border-top: 3px solid var(--color-primary);
  }

