    gap: 0.75rem;
    padding: 0.5rem 0;
    color: var(--color-text);
    font-size: 1rem;
  }

  .feature-list .check {
    color: var(--color-primary);
    font-weight: bold;
    font-size: 1.1rem;
  }

  .info-section {
    background: var(--color-background-alt);
    padding: 3rem 0;
  }

  .info-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    max-width: 900px;
    margin: 0 auto;
  }

  .info-box {
    padding: 2rem;
    border-radius: 12px;
  }

  .info-box h3 {
    font-size: 1.1rem;
    margin-bottom: 0.75rem;
    font-family: 'Poppins', sans-serif;
    font-weight: 600;
  }

  .info-box p {
    margin: 0;
    line-height: 1.7;
    font-size: 0.95rem;
  }

