---
import Layout from '../../layouts/Layout.astro';

const services = [
  { title: 'Standard Turnover', description: 'Complete cleaning between guests following our 50+ point checklist. Ready for 5-star reviews.' },
  { title: 'Deep Cleaning', description: 'Quarterly deep cleans including baseboards, inside cabinets, appliances, and often-missed areas.' },
  { title: 'Linen Service', description: 'Fresh linens for every guest. We handle washing, folding, and inventory management.' },
  { title: 'Restocking', description: 'Toiletries, paper products, coffee, and snacks replenished after every stay. Supplies billed at cost with no markup.' },
  { title: 'Same-Day Turnover', description: 'Tight schedule? Our teams can handle same-day turnovers with 2-hour notice.' },
  { title: 'Photo Reports', description: 'Documentation after each cleaning for your records and damage protection.' }
];

const checklist = [
  'Strip and remake all beds with fresh linens',
  'Replace all towels (bath, hand, face)',
  'Deep clean bathrooms (toilet, shower, sink)',
  'Sanitize all high-touch surfaces',
  'Clean kitchen appliances inside/out',
  'Wash all dishes and cookware',
  'Empty all garbage and recycling',
  'Vacuum all floors and carpets',
  'Mop hard floors',
  'Dust all surfaces and furniture',
  'Clean mirrors and glass',
  'Restock toilet paper, soap, shampoo',
  'Restock coffee, tea, and snacks',
  'Check all lights and replace bulbs',
  'Set thermostat to welcome temperature',
  'Photo documentation for records'
];

const tips = [
  { title: 'Invest in Quality Linens', content: 'White, hotel-quality linens (300+ thread count) look cleaner, feel luxurious, and can be bleached to maintain brightness. Guests notice the difference immediately.' },
  { title: 'Create a Hotel Feel', content: 'Fold toilet paper ends into points, fan towels on the bed, and leave a small welcome note. These touches take 30 seconds but create lasting impressions that earn 5-star reviews.' },
  { title: 'Address Odors Proactively', content: 'The second most common complaint after visible dirt is smell. Run the dishwasher empty with vinegar, clean garbage disposals monthly, and use subtle, universally appealing scents (fresh linen, light citrus).' }
];

const linenOptions = [
  { title: 'Full Linen Service', description: 'We provide, wash, and replace all linens. No inventory management for you.' },
  { title: 'Owner-Supplied Linens', description: 'You provide linens, we wash on-site or take to professional laundry.' },
  { title: 'Hybrid Approach', description: 'You provide backup sets, we rotate and wash between guests.' }
];

const restockingItems = [
  'Toilet paper (premium quality)',
  'Paper towels',
  'Hand soap and dish soap',
  'Shampoo, conditioner, body wash',
  'Coffee, tea, and basic snacks',
  'Garbage bags and cleaning supplies'
];

const relatedServices = [
  { name: 'Turnover Management', href: '/services/airbnb-turnover-management-toronto', description: 'End-to-end guest transition coordination' },
  { name: 'Property Maintenance', href: '/services/airbnb-property-maintenance-toronto', description: 'Repairs and emergency support' },
  { name: 'Full Management', href: '/services/full-airbnb-management-toronto', description: 'Hands-off hosting. We do everything' },
  { name: 'Key Exchange', href: '/services/airbnb-key-exchange-toronto', description: 'Smart locks and seamless check-ins' },
  { name: 'Dynamic Pricing', href: '/services/airbnb-dynamic-pricing-toronto', description: 'Manual + AI rate optimization' },
  { name: 'Photography', href: '/services/airbnb-photography-toronto', description: 'Professional listing photos' }
];

const serviceAreas = [
  'Downtown Toronto', 'North York', 'Mississauga', 'Scarborough', 'Etobicoke',
  'Brampton', 'Vaughan', 'Markham', 'Richmond Hill', 'Oakville', 'Burlington'
];
---

<Layout
  title="Airbnb Cleaning Services Toronto and GTA | 5-Star Turnover Cleaning"
  description="Professional Airbnb cleaning across the Greater Toronto Area. Same-day turnovers, 5-star standards, vetted cleaners. Serving Toronto, Mississauga, Brampton, Vaughan, Markham, Oakville and more."
>
  <section class="hero hero-small">
    <div class="container">
      <h1>Airbnb Cleaning Services Toronto</h1>
      <p class="hero-subtitle">5-star cleanliness is the number one factor in guest reviews. Our professional cleaning teams ensure your property sparkles after every guest.</p>
    </div>
  </section>

  <section class="trust-bar">
    <div class="container">
      <div class="trust-grid">
        <div class="trust-item">
          <span class="trust-number">50+</span>
          <span class="trust-label">Point Checklist</span>
        </div>
        <div class="trust-item">
          <span class="trust-number">2hr</span>
          <span class="trust-label">Emergency Response</span>
        </div>
        <div class="trust-item">
          <span class="trust-number">100%</span>
          <span class="trust-label">Photo Verified</span>
        </div>
        <div class="trust-item">
          <span class="trust-number">5-Star</span>
          <span class="trust-label">Standards</span>
        </div>
      </div>
    </div>
  </section>

  <section class="section intro-section">
    <div class="container">
      <div class="intro-content">
        <p class="intro-text">Cleanliness is mentioned in over 40% of negative Airbnb reviews. One bad cleaning experience can result in a 1-star review that tanks your listing visibility for months. Professional cleaning is not an expense ‚Äî it's insurance for your investment.</p>
        <ul class="feature-list">
          <li><span class="check">‚úì</span> 50+ point cleaning checklist</li>
          <li><span class="check">‚úì</span> Photo documentation after every clean</li>
          <li><span class="check">‚úì</span> Same-day turnover capability</li>
          <li><span class="check">‚úì</span> Linen service and restocking included</li>
          <li><span class="check">‚úì</span> Background-checked, insured cleaners</li>
        </ul>
        <a href="/contact" class="btn btn-primary btn-large">Get Cleaning Quote</a>
      </div>
    </div>
  </section>

  <section class="section info-section">
    <div class="container">
      <div class="info-grid">
        <div class="info-box highlight-box">
          <h3>The Cost of Bad Cleaning</h3>
          <p>A single 1-star cleanliness review can drop your overall rating below 4.5 stars, removing you from Airbnb Guest Favorite status and pushing your listing down in search results. The revenue lost far exceeds any cleaning savings.</p>
        </div>
        <div class="info-box tip-box">
          <h3>Pro Tip: Buffer Time</h3>
          <p>Do not schedule back-to-back check-out and check-in. A 4-5 hour gap allows thorough cleaning without rushing. Rushed cleanings lead to missed spots and bad reviews.</p>
        </div>
      </div>
    </div>
  </section>

  <section class="section services-section">
    <div class="container">
      <div class="section-header">
        <h2>Our Cleaning Services</h2>
        <p class="serif">Everything you need for 5-star cleanliness</p>
      </div>
      <div class="services-grid">
        {services.map(service => (
          <div class="service-card">
            <h3>{service.title}</h3>
            <p>{service.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section checklist-section">
    <div class="container">
      <div class="section-header">
        <h2>Our 50+ Point Checklist</h2>
        <p class="serif">Developed from thousands of turnovers and refined based on guest feedback</p>
      </div>
      <div class="checklist-box">
        <div class="checklist-grid">
          {checklist.map(item => (
            <div class="checklist-item">
              <span class="check">‚úì</span>
              <span>{item}</span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <section class="section linen-section">
    <div class="container">
      <div class="section-header">
        <h2>Linen Service Options</h2>
        <p class="serif">Managing linens is one of the biggest headaches for Airbnb hosts</p>
      </div>
      <div class="linen-grid">
        {linenOptions.map(option => (
          <div class="linen-card">
            <h3>{option.title}</h3>
            <p>{option.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section restocking-section">
    <div class="container">
      <div class="section-header">
        <h2>Supply Restocking</h2>
        <p class="serif">Supplies billed at cost ‚Äî we never mark up</p>
      </div>
      <div class="restocking-content">
        <p class="restocking-intro">Our <a href="/services/full-airbnb-management-toronto">full management</a> includes supply restocking coordination. All supplies are billed at cost with no markup ‚Äî you pay exactly what we pay.</p>
        <div class="restocking-grid">
          {restockingItems.map(item => (
            <div class="restocking-item">
              <span class="check">‚úì</span>
              <span>{item}</span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <section class="section sameday-section">
    <div class="container">
      <div class="section-header">
        <h2>Same-Day Turnover Capability</h2>
        <p class="serif">For those last-minute bookings with tight windows</p>
      </div>
      <div class="sameday-content">
        <p>Sometimes you will get a last-minute booking with a tight turnover window. Our Toronto-based teams can handle same-day turnovers when needed.</p>
        <div class="sameday-grid">
          <div class="sameday-item">
            <span class="sameday-icon">üåê</span>
            <h4>GTA-Wide Network</h4>
            <p>Backup cleaners across the Greater Toronto Area</p>
          </div>
          <div class="sameday-item">
            <span class="sameday-icon">‚ö°</span>
            <h4>2-Hour Response</h4>
            <p>Emergency response time for urgent requests</p>
          </div>
          <div class="sameday-item">
            <span class="sameday-icon">üì±</span>
            <h4>Real-Time Updates</h4>
            <p>Communication and progress updates throughout</p>
          </div>
          <div class="sameday-item">
            <span class="sameday-icon">‚ú®</span>
            <h4>Quality First</h4>
            <p>Quality never compromised for speed</p>
          </div>
        </div>
        <p>Need <a href="/emergency-airbnb-support-toronto">emergency cleaning support</a>? Contact our emergency line for urgent requests.</p>
      </div>
    </div>
  </section>

  <section class="section tips-section">
    <div class="container">
      <div class="section-header">
        <h2>Tips for 5-Star Cleanliness</h2>
        <p class="serif">Maximize your guest reviews with these strategies</p>
      </div>
      <div class="tips-grid">
        {tips.map(tip => (
          <div class="tip-card">
            <h3>{tip.title}</h3>
            <p>{tip.content}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section areas-section">
    <div class="container">
      <div class="section-header">
        <h2>GTA Service Areas</h2>
        <p class="serif">Professional cleaning across the Greater Toronto Area</p>
      </div>
      <div class="areas-grid">
        {serviceAreas.map(area => (
          <span class="area-tag">{area}</span>
        ))}
      </div>
    </div>
  </section>

  <section class="section related-section">
    <div class="container">
      <div class="section-header">
        <h2>Complete Your Hosting Setup</h2>
        <p class="serif">Services that work together with professional cleaning</p>
      </div>
      <div class="related-grid">
        {relatedServices.map(service => (
          <a href={service.href} class="related-card">
            <h4>{service.name}</h4>
            <p>{service.description}</p>
            <span class="arrow">‚Üí</span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2>Never Worry About Cleaning Again</h2>
        <p>Let our professional teams handle every turnover while you enjoy passive income.</p>
        <a href="tel:647-957-8956" class="btn btn-primary btn-large">Call Now: 647-957-8956</a>
      </div>
    </div>
  </section>
</Layout>

<style>
