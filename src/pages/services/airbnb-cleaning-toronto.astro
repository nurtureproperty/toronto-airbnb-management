    background: var(--color-primary-dark);
    padding: 1.5rem 0;
  }

  .trust-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    text-align: center;
  }

  .trust-item {
    color: white;
  }

  .trust-number {
    display: block;
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 0.25rem;
  }

  .trust-label {
    font-size: 0.875rem;
    opacity: 0.9;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-header h2 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .section-header p {
    color: var(--color-text-light);
    font-size: 1.1rem;
  }

  .related-section {
    background: var(--color-background-alt);
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .related-card {
    background: white;
    padding: 1.5rem;
    border-radius: 12px;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
    position: relative;
  }

  .related-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
  }

  .related-card h4 {
    font-family: 'DM Sans', sans-serif;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--color-primary-dark);
  }

  .related-card p {
    font-size: 0.9rem;
    color: var(--color-text-light);
    margin: 0;
  }

  .related-card .arrow {
    position: absolute;
    right: 1.5rem;
    top: 50%;
    transform: translateY(-50%);
    color: var(--color-primary);
    font-size: 1.25rem;
  }

  .hero-small {
    text-align: center;
    padding: 4rem 0 3rem;
  }

  .hero-small h1 {
    font-size: clamp(2rem, 4vw, 3rem);
    margin-bottom: 1.5rem;
  }

  .highlight {
    color: var(--color-primary);
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--color-text-light);
    max-width: 700px;
    margin: 0 auto 2rem;
  }

  .content-section {
    background: var(--color-background);
  }

  .content-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 4rem;
  }

  .main-content h2 {
    font-size: clamp(1.75rem, 3vw, 2.25rem);
    margin-bottom: 1.5rem;
    color: var(--color-text);
  }

  .main-content h3 {
    font-size: 1.5rem;
    margin: 2.5rem 0 1rem;
    color: var(--color-text);
  }

  .main-content p {
    margin-bottom: 1.5rem;
    line-height: 1.8;
    color: var(--color-text-light);
  }

  .main-content ul, .main-content ol {
    margin: 1.5rem 0;
    padding-left: 1.5rem;
  }

  .main-content li {
    margin-bottom: 0.75rem;
    line-height: 1.7;
    color: var(--color-text-light);
  }

  .main-content a {
    color: var(--color-primary);
    text-decoration: underline;
  }

  .main-content a:hover {
    color: var(--color-primary-dark);
  }

  .warning-box {
    background: #FFF3E0;
    border-left: 4px solid #F57C00;
    padding: 1.5rem;
    margin: 2rem 0;
    border-radius: 0 10px 10px 0;
  }

  .warning-box h4 {
    color: #E65100;
    margin-bottom: 0.5rem;
    font-family: DM Sans, sans-serif;
    font-style: normal;
    font-weight: 600;
  }

  .warning-box p {
    margin: 0;
    color: var(--color-text-light);
  }

  .tip-box {
    background: var(--color-primary-light);
