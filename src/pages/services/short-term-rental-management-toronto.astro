  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Short-Term Rental Management Toronto",
  "description": "Expert short-term rental management in Toronto with STR registration assistance, guest management, and compliance support. 10-15% commission.",
  "url": "https://www.nurturestays.ca/services/short-term-rental-management-toronto",
  "provider": {
    "@type": "LocalBusiness",
    "name": "Nurture Airbnb Property Management",
    "telephone": "+1-647-957-8956"
  },
  "areaServed": { "@type": "Place", "name": "Greater Toronto Area, Ontario, Canada" },
  "serviceType": "Property Management"
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.q,
    "acceptedAnswer": { "@type": "Answer", "text": faq.a }
  }))
};

const pageSchema = [serviceSchema, faqSchema];
