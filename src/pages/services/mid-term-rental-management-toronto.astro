    }

    .hero-stats {
      gap: 2rem;
    }

    .stat-number {
      font-size: 2rem;
    }

    .table-row {
      grid-template-columns: 1fr;
      gap: 0.5rem;
      text-align: center;
    }

    .table-row.header {
      display: none;
    }

    .services-grid {
      grid-template-columns: 1fr;
    }

    .related-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
