    color: white;
  }

  .sidebar-cta h4 {
    color: white;
  }

  .sidebar-cta p {
    margin-bottom: 1rem;
    opacity: 0.9;
  }

  .sidebar-cta .btn {
    display: block;
    text-align: center;
    background: white;
    color: var(--color-primary-dark);
  }

  .services-section {
    background: var(--color-background-alt);
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-header h2 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .section-header p {
    color: var(--color-text-light);
    font-size: 1.1rem;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .service-card {
    background: white;
    padding: 2rem;
    border-radius: 16px;
    border-left: 4px solid var(--color-primary);
    transition: all 0.3s ease;
  }

  .service-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .service-card h3 {
    font-size: 1.15rem;
    margin-bottom: 0.5rem;
    font-family: 'Poppins', sans-serif;
    font-weight: 600;
  }

  .service-card p {
    color: var(--color-text-light);
    font-size: 0.9rem;
    line-height: 1.6;
    margin: 0;
  }

  .service-card a {
    color: var(--color-primary);
  }

  .related-section {
    background: white;
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .related-card {
    background: var(--color-background-alt);
    padding: 1.5rem;
    border-radius: 12px;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
    position: relative;
  }

  .related-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
  }

  .related-card h4 {
    font-family: 'DM Sans', sans-serif;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--color-primary-dark);
  }

  .related-card p {
    font-size: 0.9rem;
    color: var(--color-text-light);
    margin: 0;
  }

  .related-card .arrow {
    position: absolute;
    right: 1.5rem;
    top: 50%;
    transform: translateY(-50%);
    color: var(--color-primary);
    font-size: 1.25rem;
  }

  .cta-section {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    padding: 5rem 0;
    text-align: center;
    color: white;
  }

  .cta-content h2 {
    color: white;
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .cta-content p {
    font-size: 1.25rem;
    opacity: 0.95;
    margin-bottom: 2rem;
  }

  .cta-section .btn {
    background: white;
    color: var(--color-primary);
  }

  @media (max-width: 968px) {
    .content-grid {
      grid-template-columns: 1fr;
    }

    .sidebar {
      position: static;
    }

    .table-row {
      grid-template-columns: 1.2fr 1fr 1fr 1fr;
      font-size: 0.85rem;
    }

    .services-grid {
      grid-template-columns: repeat(2, 1fr);
