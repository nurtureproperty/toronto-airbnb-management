    color: #555;
  }

  .highlight-box {
    background: #FFF8E1;
    border-left: 4px solid var(--color-gold);
    padding: 1.5rem;
    margin: 2rem 0;
    border-radius: 0 10px 10px 0;
  }

  .highlight-box h4 {
    color: #F57C00;
    margin-bottom: 0.5rem;
    font-family: 'DM Sans', sans-serif;
  }

  .highlight-box p {
    margin: 0;
    color: #555;
  }

  .bylaw-box {
    background: #E3F2FD;
    border-left: 4px solid #1976D2;
    padding: 1.5rem;
    margin: 2rem 0;
    border-radius: 0 10px 10px 0;
  }

  .bylaw-box h4 {
    color: #1565C0;
    margin-bottom: 0.5rem;
    font-family: 'DM Sans', sans-serif;
  }

  .bylaw-box p {
    margin: 0 0 1rem;
    color: #555;
  }

  .bylaw-box ul {
    margin: 0;
    padding-left: 1.5rem;
  }

  .bylaw-box li {
    color: #555;
    margin-bottom: 0.5rem;
  }

  .comparison-table {
    margin: 2rem 0;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: var(--shadow-sm);
  }

  .table-row {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr 1fr;
    padding: 1rem;
    border-bottom: 1px solid var(--color-border);
    background: white;
  }

  .table-row.header {
    background: var(--color-primary-dark);
    color: white;
    font-weight: 600;
  }

  .table-row:nth-child(even):not(.header) {
    background: var(--color-background-alt);
  }

  .table-row:last-child {
    border-bottom: none;
  }

  .highlight-value {
    color: var(--color-primary-dark);
    font-weight: 600;
  }

  .sidebar {
    position: sticky;
    top: 100px;
  }

  .sidebar-card {
    background: var(--color-background-alt);
    padding: 1.5rem;
    border-radius: 15px;
    margin-bottom: 1.5rem;
  }

  .sidebar-card h4 {
    font-size: 1.1rem;
    margin-bottom: 1rem;
    font-family: 'DM Sans', sans-serif;
    font-weight: 600;
  }

  .sidebar-card ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .sidebar-card li {
    padding: 0.5rem 0;
    border-bottom: 1px solid var(--color-border);
    color: var(--color-text-light);
  }

  .sidebar-card li:last-child {
    border-bottom: none;
  }

  .sidebar-card a {
    color: var(--color-primary-dark);
    text-decoration: none;
    font-weight: 500;
  }

  .sidebar-card a:hover {
    text-decoration: underline;
  }

  .sidebar-cta {
