    text-align: left;
  }

  .feature-list li {
    display: flex;
    align-items: center;
    gap: 0.875rem;
    padding: 0.625rem 0;
    color: var(--color-text);
    font-size: 1.05rem;
  }

  .feature-list .check {
    color: var(--color-primary);
    font-weight: 600;
    font-size: 1.1rem;
  }

  /* Info Section - Clean White Cards */
  .info-section {
    background: white;
    padding: 4rem 0;
  }

