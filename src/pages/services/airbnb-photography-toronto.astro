    background: #E8F5E9;
    border-left: 4px solid var(--color-primary);
    padding: 1.5rem;
    margin: 1.5rem 0;
    border-radius: 0 10px 10px 0;
  }

  .tip-box h4 {
    color: var(--color-primary-dark);
    margin-bottom: 0.5rem;
    font-family: 'DM Sans', sans-serif;
  }

  .tip-box p {
    margin: 0;
    color: #555;
  }

  .sidebar {
    position: sticky;
    top: 100px;
  }

  .sidebar-card {
    background: var(--color-background-alt);
    padding: 1.5rem;
    border-radius: 15px;
    margin-bottom: 1.5rem;
  }

  .sidebar-card h4 {
    font-size: 1.1rem;
    margin-bottom: 1rem;
    font-family: 'DM Sans', sans-serif;
    font-weight: 600;
  }

  .sidebar-card ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .sidebar-card li {
    padding: 0.5rem 0;
    border-bottom: 1px solid var(--color-border);
    color: var(--color-text-light);
  }

  .sidebar-card li:last-child {
    border-bottom: none;
  }

  .sidebar-card a {
    color: var(--color-primary-dark);
    text-decoration: none;
    font-weight: 500;
  }

