    line-height: 1.75;
    font-size: 0.95rem;
    color: var(--color-text-light);
  }

  .highlight-box,
  .tip-box {
    background: white;
    border: 1px solid #e8e8e8;
  }

  .highlight-box h3,
  .tip-box h3 {
    color: var(--color-text);
  }

  .highlight-box p,
  .tip-box p {
    color: var(--color-text-light);
  }

  /* Section Headers - Cleaner */
  .section-header {
    text-align: center;
    margin-bottom: 3.5rem;
  }

  .section-header h2 {
    font-size: 2.25rem;
    margin-bottom: 0.75rem;
    font-family: 'Poppins', sans-serif;
    font-weight: 600;
    color: var(--color-text);
  }

  .section-header p {
    color: var(--color-text-light);
    font-size: 1.1rem;
    font-weight: 400;
  }

  .section-header .serif {
    font-family: 'DM Sans', sans-serif;
  }

  /* Comparison Section */
  .comparison-section {
    background: #f8f9fa;
  }

  .comparison-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
