    justify-content: center;
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 auto 1.25rem;
    font-family: 'Poppins', sans-serif;
    transition: all 0.3s ease;
  }

  .step-card:hover .step-number {
    transform: scale(1.1);
    background: var(--color-primary-dark);
  }

  .step-card h3 {
