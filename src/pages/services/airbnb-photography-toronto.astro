  .section-header p {
    color: var(--color-text-light);
    font-size: 1.1rem;
  }

  .packages-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .package-card {
    background: white;
    padding: 2rem;
    border-radius: 16px;
    border-left: 4px solid var(--color-primary);
    transition: all 0.3s ease;
  }

  .package-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .package-card h3 {
    font-size: 1.15rem;
    margin-bottom: 0.5rem;
    font-family: 'Poppins', sans-serif;
    font-weight: 600;
  }

  .package-card p {
    color: var(--color-text-light);
    font-size: 0.9rem;
    line-height: 1.6;
    margin: 0;
  }

  .related-section {
    background: white;
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .related-card {
    background: var(--color-background-alt);
    padding: 1.5rem;
    border-radius: 12px;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
    position: relative;
  }

  .related-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
  }

  .related-card h4 {
    font-family: 'DM Sans', sans-serif;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--color-primary-dark);
  }

  .related-card p {
    font-size: 0.9rem;
    color: var(--color-text-light);
    margin: 0;
  }

  .related-card .arrow {
    position: absolute;
    right: 1.5rem;
    top: 50%;
    transform: translateY(-50%);
    color: var(--color-primary);
    font-size: 1.25rem;
  }

  .cta-section {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    padding: 5rem 0;
    text-align: center;
    color: white;
  }

  .cta-content h2 {
    color: white;
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .cta-content p {
    font-size: 1.25rem;
    opacity: 0.9;
    margin-bottom: 2rem;
  }

  .cta-section .btn {
    background: white;
    color: var(--color-primary);
  }

  @media (max-width: 968px) {
    .trust-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .content-grid {
      grid-template-columns: 1fr;
    }

    .sidebar {
      position: static;
    }

    .comparison-grid {
      grid-template-columns: 1fr;
    }

    .packages-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .related-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 576px) {
    .trust-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    .trust-number {
      font-size: 1.5rem;
    }

    .packages-grid {
      grid-template-columns: 1fr;
    }

    .related-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
