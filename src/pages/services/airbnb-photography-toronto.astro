    color: var(--color-text-light);
    font-size: 0.95rem;
    line-height: 1.6;
    margin: 0;
  }

  /* Tips Section */
  .tips-section {
    background: #f8f9fa;
  }

  .tips-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .tip-card {
    background: white;
    padding: 2rem;
    border-radius: 16px;
    border: 1px solid #e8e8e8;
