---
import Layout from '../../layouts/Layout.astro';

const services = [
  { title: 'Dynamic Pricing', description: 'We optimize your nightly rates using market data and manual + AI adjustments to maximize your revenue.' },
  { title: 'Guest Communication', description: 'We handle all guest messages, inquiries, and booking requests. Less than 9-minute average response time.' },
  { title: 'Booking Management', description: 'We screen guests, manage reservations, and handle all the back-and-forth so you don\'t have to.' },
  { title: 'Review Management', description: 'We craft thoughtful responses to reviews and help maintain your 5-star reputation on the platform.' },
  { title: 'Performance Reports', description: 'Monthly reports showing your bookings, revenue, and how your property is performing against the market.' },
  { title: 'Listing Optimization', description: 'We continuously improve your listing title, description, and photos to rank higher and convert more views.' }
];

const steps = [
  { number: '1', title: 'Tell Us Your Needs', description: 'We learn what tasks you want help with and where you want to stay involved.' },
  { number: '2', title: 'Custom Plan', description: 'We create a co-hosting arrangement tailored to your specific situation and goals.' },
  { number: '3', title: 'We Team Up', description: 'You handle what you enjoy, we handle the rest. Clear communication, no confusion.' },
  { number: '4', title: 'Grow Together', description: 'Scale up or down based on your needs. More support during busy seasons, less when you want.' }
];

const faqs = [
  { q: 'What\'s the difference between co-hosting and full management?', a: 'With co-hosting, we handle guest communication, pricing, and booking management while you handle physical tasks like cleaning coordination and restocking. Full management means we handle everything.' },
  { q: 'Can I upgrade to full management later?', a: 'Absolutely! Many hosts start with co-hosting to learn the ropes, then upgrade to full management when they want to go fully passive. The transition is seamless.' },
  { q: 'What if I need more help during busy seasons?', a: 'We\'re flexible. You can temporarily upgrade your service level during peak seasons or when life gets busy, then scale back down when you\'re ready.' },
  { q: 'Will I still learn how to run my Airbnb?', a: 'Yes! Co-hosting is a great way to learn best practices while having professional backup. We share insights and strategies so you become a better host.' },
  { q: 'Who owns the listing?', a: 'You do. We work on your existing listing under your account. All reviews, history, and superhost status remain yours.' }
];

const relatedServices = [
  { name: 'Full Management', href: '/services/full-airbnb-management', description: 'Hands-off hosting. We do everything.' },
  { name: 'Dynamic Pricing', href: '/services/airbnb-dynamic-pricing', description: 'Maximize revenue with smart pricing' },
  { name: 'Listing Optimization', href: '/services/airbnb-listing-optimization', description: 'Get more bookings with better listings' },
  { name: 'Cleaning Services', href: '/services/airbnb-cleaning', description: 'Professional turnover cleaning' },
  { name: 'Photography', href: '/services/airbnb-photography', description: 'Professional listing photos' },
  { name: 'Improve Revenue', href: '/toronto-airbnb-not-making-money', description: 'Fix underperforming listings' }
];
---

<Layout title="Airbnb Co-Hosting Greater Toronto Area" description="Airbnb co-hosting in the Greater Toronto Area. Get professional help while staying involved. Flexible, affordable part-time management starting at 10%. Keep control, get support.">
  <section class="hero hero-small">
    <div class="container">
      <h1>Airbnb Co-Hosting in the Greater Toronto Area</h1>
      <p class="hero-subtitle">Professional help while you stay in control. Perfect for hands-on hosts who need backup.</p>
    </div>
  </section>

  <section class="trust-bar">
    <div class="container">
      <div class="trust-grid">
        <div class="trust-item">
          <span class="trust-number">4.9★</span>
          <span class="trust-label">Average Rating</span>
        </div>
        <div class="trust-item">
          <span class="trust-number">9 min</span>
          <span class="trust-label">Response Time</span>
        </div>
        <div class="trust-item">
          <span class="trust-number">10%</span>
          <span class="trust-label">Starting Rate</span>
        </div>
        <div class="trust-item">
          <span class="trust-number">Flexible</span>
          <span class="trust-label">Your Terms</span>
        </div>
      </div>
    </div>
  </section>

  <section class="section intro-section">
    <div class="container">
      <div class="intro-content">
        <p class="intro-text">Want professional help but still want to stay involved? Our co-hosting service gives you expert support while you maintain control. Stay involved as much or as little as you want, with lower costs than full management.</p>
        <ul class="feature-list">
          <li><span class="check">✓</span> Stay involved as much or as little as you want</li>
          <li><span class="check">✓</span> Lower cost than full management</li>
          <li><span class="check">✓</span> Professional pricing & guest communication</li>
          <li><span class="check">✓</span> Flexible support when you need it</li>
          <li><span class="check">✓</span> Keep learning the Airbnb business</li>
        </ul>
        <a href="/contact" class="btn btn-primary btn-large">Get Free Consultation</a>
      </div>
    </div>
  </section>

  <section class="section services-section">
    <div class="container">
      <div class="section-header">
        <h2>What Co-Hosting Includes</h2>
        <p>Professional support, your way</p>
      </div>
      <div class="services-grid">
        {services.map(service => (
          <div class="service-card">
            <h3>{service.title}</h3>
            <p>{service.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section steps-section">
    <div class="container">
      <div class="section-header">
        <h2>How Co-Hosting Works</h2>
        <p>Partnership, not takeover</p>
      </div>
      <div class="steps-grid">
        {steps.map(step => (
          <div class="step-card">
            <span class="step-number">{step.number}</span>
            <h3>{step.title}</h3>
            <p>{step.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section comparison-section">
    <div class="container">
      <div class="section-header">
        <h2>Full Management vs. Co-Hosting</h2>
        <p>Choose the right level of support for you</p>
      </div>
      <div class="comparison-grid">
        <div class="comparison-card">
          <h3>Full Management (15%)</h3>
          <ul class="comparison-list">
            <li><span class="icon-check">✓</span> We handle absolutely everything</li>
            <li><span class="icon-check">✓</span> Cleaning coordination included</li>
            <li><span class="icon-check">✓</span> Restocking management included</li>
            <li><span class="icon-check">✓</span> Maintenance coordination</li>
            <li><span class="icon-check">✓</span> True passive income</li>
            <li><span class="icon-check">✓</span> Best for: Busy owners</li>
          </ul>
        </div>
        <div class="comparison-card highlight">
          <h3>Co-Hosting (10%)</h3>
          <ul class="comparison-list">
            <li><span class="icon-check">✓</span> Pricing & guest communication</li>
            <li><span class="icon-check">✓</span> You coordinate cleaning</li>
            <li><span class="icon-check">✓</span> You handle restocking</li>
            <li><span class="icon-check">✓</span> You manage maintenance</li>
            <li><span class="icon-check">✓</span> Lower fees, more control</li>
            <li><span class="icon-check">✓</span> Best for: Hands-on hosts</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <section class="section pricing-highlight">
    <div class="container">
      <div class="pricing-box">
        <h2>Affordable Co-Hosting</h2>
        <p class="pricing-subtitle">Professional help without breaking the bank</p>
        <div class="price">10%</div>
        <div class="price-label">of monthly revenue</div>
        <p class="price-note">That's 5% less than full management. Perfect for hosts who want to stay involved.</p>
        <a href="/pricing-toronto-airbnb-management" class="btn btn-primary">See Full Pricing Details</a>
      </div>
    </div>
  </section>

  <section class="section faq-section">
    <div class="container">
      <div class="section-header">
        <h2>Co-Hosting Questions</h2>
      </div>
      <div class="faq-grid">
        {faqs.map(faq => (
          <div class="faq-card">
            <h4>{faq.q}</h4>
            <p>{faq.a}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section related-section">
    <div class="container">
      <div class="section-header">
        <h2>Related Services</h2>
        <p>Explore our other Airbnb management services</p>
      </div>
      <div class="related-grid">
        {relatedServices.map(service => (
          <a href={service.href} class="related-card">
            <h4>{service.name}</h4>
            <p>{service.description}</p>
            <span class="arrow">→</span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2>Ready for Professional Backup?</h2>
        <p>Get the support you need while staying in control of your Airbnb.</p>
        <a href="/contact" class="btn btn-primary btn-large">Start Co-Hosting Today</a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .hero-subtitle {
    text-align: center;
    margin: 0 auto;
    max-width: 600px;
  }

  .trust-bar {
    background: var(--color-primary-dark);
    padding: 1.5rem 0;
  }

  .trust-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    text-align: center;
  }

  .trust-item {
    color: white;
  }

  .trust-number {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 0.25rem;
  }

  .trust-label {
    font-size: 0.875rem;
    opacity: 0.9;
  }

  .intro-section {
    background: white;
  }

  .intro-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .intro-text {
    font-size: 1.25rem;
    color: var(--color-text-light);
    margin-bottom: 2rem;
    line-height: 1.8;
  }

  .feature-list {
    list-style: none;
    padding: 0;
    margin: 0 0 2rem;
    display: inline-block;
    text-align: left;
  }

  .feature-list li {
    padding: 0.5rem 0;
    font-size: 1.1rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .check {
    color: var(--color-primary);
    font-weight: 700;
    font-size: 1.25rem;
  }

  .services-section {
    background: var(--color-background-alt);
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .service-card {
    background: white;
    padding: 2rem;
    border-radius: 16px;
    box-shadow: var(--shadow-md);
    border-left: 4px solid var(--color-primary);
    transition: all 0.3s ease;
  }

  .service-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .service-card h3 {
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
    font-family: 'Poppins', sans-serif;
    font-style: normal;
    font-weight: 600;
  }

  .service-card p {
    color: var(--color-text-light);
    line-height: 1.6;
    font-size: 0.95rem;
    margin: 0;
  }

  .steps-section {
    background: white;
  }

  .steps-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
  }

  .step-card {
    text-align: center;
  }

  .step-number {
    width: 60px;
    height: 60px;
    background: var(--color-primary);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 auto 1.5rem;
  }

  .step-card h3 {
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
    font-family: 'DM Sans', sans-serif;
    font-style: normal;
    font-weight: 600;
  }

  .step-card p {
    color: var(--color-text-light);
    font-size: 0.95rem;
    line-height: 1.6;
    margin: 0;
  }

  .comparison-section {
    background: var(--color-background-alt);
  }

  .comparison-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    max-width: 900px;
    margin: 0 auto;
  }

  .comparison-card {
    background: white;
    padding: 2.5rem;
    border-radius: 16px;
    box-shadow: var(--shadow-md);
  }

  .comparison-card.highlight {
    background: var(--color-primary-dark);
    color: white;
  }

  .comparison-card h3 {
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
    text-align: center;
    font-family: 'DM Sans', sans-serif;
    font-style: normal;
    font-weight: 600;
  }

  .comparison-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .comparison-list li {
    padding: 0.75rem 0;
    border-bottom: 1px solid rgba(0,0,0,0.1);
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .comparison-card.highlight .comparison-list li {
    border-bottom-color: rgba(255,255,255,0.2);
  }

  .comparison-list li:last-child {
    border-bottom: none;
  }

  .icon-check {
    color: var(--color-primary);
    font-weight: 700;
  }

  .comparison-card.highlight .icon-check {
    color: var(--color-accent);
  }

  .pricing-highlight {
    background: var(--color-primary-dark);
    color: white;
    text-align: center;
  }

  .pricing-box {
    max-width: 600px;
    margin: 0 auto;
  }

  .pricing-box h2 {
    color: white;
    margin-bottom: 0.5rem;
  }

  .pricing-subtitle {
    opacity: 0.9;
    margin-bottom: 2rem;
  }

  .price {
    font-size: 4rem;
    font-weight: 700;
  }

  .price-label {
    font-size: 1.25rem;
    opacity: 0.9;
    margin-bottom: 1.5rem;
  }

  .price-note {
    opacity: 0.8;
    margin-bottom: 2rem;
  }

  .pricing-highlight .btn {
    background: white;
    color: var(--color-primary-dark);
  }

  .pricing-highlight .btn:hover {
    background: var(--color-background-alt);
  }

  .faq-section {
    background: white;
  }

  .faq-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .faq-card {
    background: var(--color-background-alt);
    padding: 1.5rem;
    border-radius: 12px;
  }

  .faq-card h4 {
    font-family: 'DM Sans', sans-serif;
    font-style: normal;
    font-weight: 600;
    font-size: 1.1rem;
    margin: 0 0 0.75rem;
  }

  .faq-card p {
    color: var(--color-text-light);
    margin: 0;
    font-size: 0.95rem;
    line-height: 1.6;
  }

  .cta-section {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    padding: 5rem 0;
    text-align: center;
    color: white;
  }

  .cta-content h2 {
    color: white;
    margin-bottom: 1rem;
  }

  .cta-content p {
    font-size: 1.25rem;
    opacity: 0.9;
    margin-bottom: 2rem;
  }

  .cta-section .btn {
    background: white;
    color: var(--color-primary);
  }

  .cta-section .btn:hover {
    background: var(--color-background-alt);
  }

  @media (max-width: 968px) {
    .trust-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .services-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .steps-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .comparison-grid {
      grid-template-columns: 1fr;
    }

    .faq-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 576px) {
    .trust-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    .trust-number {
      font-size: 1.5rem;
    }

    .services-grid {
      grid-template-columns: 1fr;
    }

    .steps-grid {
      grid-template-columns: 1fr;
    }

    .price {
      font-size: 3rem;
    }
  }

  .related-section {
    background: var(--color-background-alt);
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .related-card {
    background: white;
    padding: 1.5rem;
    border-radius: 12px;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
    position: relative;
    border: 1px solid var(--color-border);
  }

  .related-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
    border-color: var(--color-primary);
  }

  .related-card h4 {
    font-family: 'Poppins', sans-serif;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--color-primary-dark);
    font-size: 1rem;
  }

  .related-card p {
    font-size: 0.85rem;
    color: var(--color-text-light);
    margin: 0;
    padding-right: 1.5rem;
  }

  .related-card .arrow {
    position: absolute;
    right: 1.5rem;
    top: 50%;
    transform: translateY(-50%);
    color: var(--color-primary);
    font-size: 1.25rem;
  }

  @media (max-width: 968px) {
    .related-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 576px) {
    .related-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
