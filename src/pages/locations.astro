---
import Layout from '../layouts/Layout.astro';

const locations = [
  {
    name: 'Downtown Toronto',
    slug: '/downtown-toronto-airbnb-management',
    description: 'Premium downtown condos near the CN Tower, Financial District, and Entertainment District. Highest demand and rates in the GTA.'
  },
  {
    name: 'North York',
    slug: '/north-york-airbnb-management',
    description: 'Modern high-rises along the Yonge corridor with excellent subway access. Popular with business travelers and families.'
  },
  {
    name: 'Etobicoke',
    slug: '/etobicoke-airbnb-management',
    description: 'Waterfront properties in Mimico and Humber Bay. Great for guests wanting lake views and easy downtown access.'
  },
  {
    name: 'Scarborough',
    slug: '/scarborough-airbnb-management',
    description: 'Near the Bluffs, Toronto Zoo, and Rouge Park. Less competition with strong demand from nature lovers.'
  },
  {
    name: 'Mississauga',
    slug: '/mississauga-airbnb-management',
    description: 'Close to Pearson Airport and Port Credit waterfront. Consistent year-round demand from travelers.'
  },
  {
    name: 'Southern Ontario',
    slug: '/contact',
    description: 'Have a property elsewhere in Southern Ontario? Get in touch to discuss how we can help manage your rental.'
  }
];
---

<Layout
  title="Airbnb Management Locations - Greater Toronto Area Service Areas"
  description="Nurture provides Airbnb property management across the GTA including Downtown Toronto, North York, Etobicoke, Scarborough, and Mississauga. Local expertise for your rental."
>
  <section class="hero hero-small">
    <div class="container">
      <h1>Property Management in the Greater Toronto Area</h1>
      <p class="hero-subtitle">Expert short and mid term rental property management across Southern Ontario</p>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="locations-grid">
        {locations.map(location => (
          <a href={location.slug} class="location-card">
            <div class="location-content">
              <h3>{location.name}</h3>
              <p>{location.description}</p>
              <span class="learn-more">Learn more â†’</span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2>Don't See Your Area?</h2>
        <p>We're always expanding. Contact us to discuss your property location.</p>
        <a href="/contact" class="btn btn-large">Get in Touch</a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .hero-subtitle {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .locations-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }

  .location-card {
    display: block;
    background: white;
    border: 1px solid var(--color-border);
    border-radius: 16px;
    padding: 2rem;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .location-card:hover {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
  }

  .location-content h3 {
    margin: 0 0 0.75rem;
    font-size: 1.5rem;
    color: var(--color-text);
  }

  .location-content p {
    color: var(--color-text-light);
    margin: 0 0 1rem;
    line-height: 1.7;
  }

  .learn-more {
    color: var(--color-primary);
    font-weight: 600;
  }

  .location-card:hover .learn-more {
    text-decoration: underline;
  }

  .cta-section {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    padding: 5rem 0;
    text-align: center;
    color: white;
  }

  .cta-content h2 {
    margin-bottom: 1rem;
  }

  .cta-content p {
    font-size: 1.25rem;
    opacity: 0.9;
    margin-bottom: 2rem;
  }

  .cta-section .btn {
    background: white;
    color: var(--color-primary);
  }

  .cta-section .btn:hover {
    background: var(--color-background-alt);
  }

  @media (max-width: 768px) {
    .locations-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
