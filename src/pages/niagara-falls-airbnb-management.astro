  .stat-label { color: var(--color-text-light); font-size: 0.9rem; }

  .neighborhoods-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .neighborhood-card {
    background: white;
    padding: 2rem;
    border-radius: 16px;
    box-shadow: var(--shadow-md);
    border-top: 4px solid var(--color-primary);
    transition: transform 0.3s ease;
  }

  .neighborhood-card:hover { transform: translateY(-5px); }
  .neighborhood-card h3 { font-size: 1.25rem; margin-bottom: 1rem; }
  .neighborhood-card p { color: var(--color-text-light); margin-bottom: 1rem; line-height: 1.7; }

  .avg-revenue {
    background: var(--color-background-alt);
    padding: 0.75rem 1rem;
    border-radius: 8px;
    font-weight: 600;
    color: var(--color-primary);
    font-size: 0.95rem;
  }

  .bylaws-section { background: var(--color-background-alt); }

  .bylaws-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }

  .bylaw-card {
    background: white;
    padding: 2rem;
    border-radius: 16px;
    box-shadow: var(--shadow-sm);
  }

  .bylaw-card.highlight-card {
    border: 2px solid var(--color-accent);
    background: #fffbf5;
  }

  .bylaw-card h3 { color: var(--color-primary); margin-bottom: 1rem; font-size: 1.25rem; }
  .bylaw-card p { color: var(--color-text-light); line-height: 1.7; }
  .bylaw-card a { color: var(--color-primary); text-decoration: underline; }
  .bylaw-card a:hover { color: var(--color-primary-dark); }

  .why-section {
    background: var(--color-primary-dark);
    color: white;
  }

  .why-section .container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .why-content h2 {
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
  }

  .why-content p {
    font-size: 1.125rem;
    line-height: 1.8;
    margin-bottom: 1.5rem;
    color: rgba(255, 255, 255, 0.9);
  }

  .airport-stats {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  .airport-stat {
    background: rgba(255, 255, 255, 0.1);
    padding: 1.5rem;
    border-radius: 12px;
    text-align: center;
  }

  .airport-stat .number {
    font-size: 2rem;
    font-weight: 700;
    color: #C9A961;
  }

  .airport-stat .label {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.8);
  }

