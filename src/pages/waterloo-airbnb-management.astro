  { icon: 'üè•', name: 'Hospital Area', description: 'Near Grand River Hospital. Steady demand from medical professionals, patients\' families, and healthcare visitors.', revenue: '$2,200-$3,000/month' },
  { icon: 'üå≥', name: 'Laurelwood', description: 'Family-friendly residential area. Popular for mid-term stays from relocating families and visiting grandparents.', revenue: '$2,000-$2,800/month' },
  { icon: 'üèòÔ∏è', name: 'Beechwood', description: 'Quiet neighborhood near RIM Park. Appeals to families and longer-term guests seeking suburban comfort.', revenue: '$2,100-$2,900/month' }
