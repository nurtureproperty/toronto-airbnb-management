</Layout>

<script is:inline>
(function() {
  var searchInput = document.getElementById('blog-search');
  var blogGrid = document.getElementById('blog-grid');
  var noResults = document.getElementById('no-results');
  var tagFilters = document.querySelectorAll('.tag-filter');
  var activeFilter = 'all';

  function filterPosts() {
    var query = searchInput ? searchInput.value.toLowerCase().trim() : '';
    var cards = blogGrid.querySelectorAll('.blog-card');
    var visibleCount = 0;

    for (var i = 0; i < cards.length; i++) {
      var card = cards[i];
      var title = card.getAttribute('data-title') || '';
      var tags = card.getAttribute('data-tags') || '';

      var matchesSearch = query === '' || title.indexOf(query) !== -1 || tags.indexOf(query) !== -1;
      var matchesFilter = activeFilter === 'all' || tags.indexOf(activeFilter) !== -1;

      if (matchesSearch && matchesFilter) {
        card.style.display = '';
        visibleCount++;
      } else {
        card.style.display = 'none';
      }
    }

    if (noResults) {
      noResults.style.display = visibleCount === 0 ? 'block' : 'none';
    }
  }

  if (searchInput && blogGrid) {
    searchInput.addEventListener('input', filterPosts);
  }

  for (var i = 0; i < tagFilters.length; i++) {
    tagFilters[i].addEventListener('click', function() {
      for (var j = 0; j < tagFilters.length; j++) {
        tagFilters[j].classList.remove('active');
      }
      this.classList.add('active');
      activeFilter = this.getAttribute('data-filter');
      filterPosts();
    });
  }
})();
</script>

