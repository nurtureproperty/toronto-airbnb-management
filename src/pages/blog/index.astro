            <path d="M21 21l-4.35-4.35"></path>
          </svg>
          <input
            type="text"
            id="blog-search"
            placeholder="Search articles..."
            class="search-input"
          />
        </div>
      </div>

      <h2 class="section-label">Popular Articles</h2>
      <div class="featured-grid">
        {popularPosts.map((post) => (
          <a href={`/blog/${post.slug}`} class="featured-card">
            <div class="featured-image">
              <img src={post.image} alt={post.imageAlt} loading="lazy" />
            </div>
            <div class="featured-content">
              <span class="category-badge">{post.category}</span>
              <h3 class="featured-title">{post.title}</h3>
              <span class="featured-read-time">{post.readTime}</span>
            </div>
          </a>
        ))}
      </div>

      <h2 class="section-label">All Articles</h2>
      <div class="blog-grid" id="blog-grid">
        {posts.map(post => {
          const shortExcerpt = post.excerpt.length > 100 ? post.excerpt.substring(0, 100).trim() + '...' : post.excerpt;
          return (
          <article class="blog-card" data-title={post.title.toLowerCase()} data-tags={post.tags.join(' ').toLowerCase()}>
            <div class="blog-card-content">
              <div class="blog-meta">
                <span class="category-badge">{post.category}</span>
                <span class="blog-separator">·</span>
                <span class="blog-read-time">{post.readTime}</span>
              </div>
              <h2 class="blog-title">
                <a href={`/blog/${post.slug}`}>{post.title}</a>
              </h2>
              <p class="blog-excerpt">{shortExcerpt}</p>
              <div class="blog-tags">
                {post.tags.map(tag => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            </div>
          </article>
        )})}
      </div>

      <div id="no-results" class="no-results" style="display: none;">
        <p>No articles found matching your search.</p>
      </div>
    </div>
  </section>

  <section class="cta-section">
