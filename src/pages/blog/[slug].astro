---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => {
    return data.draft !== true;
  });

  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

const pageTitle = post.data.title;
const pageDescription = post.data.description;

// Get related posts (same category or overlapping tags)
const allPosts = await getCollection('blog', ({ data }) => data.draft !== true);
const relatedPosts = allPosts
  .filter((p) => p.slug !== post.slug) // Exclude current post
  .map((p) => {
    // Score based on category match and tag overlap
    let score = 0;
    if (p.data.category === post.data.category) score += 3;
    const tagOverlap = p.data.tags.filter((tag: string) => post.data.tags.includes(tag)).length;
    score += tagOverlap;
    return { post: p, score };
  })
  .filter(({ score }) => score > 0) // Only posts with some relevance
  .sort((a, b) => {
    // Sort by score, then by date
    if (b.score !== a.score) return b.score - a.score;
    return new Date(b.post.data.pubDate).getTime() - new Date(a.post.data.pubDate).getTime();
  })
  .slice(0, 3)
  .map(({ post }) => post);

// Calculate reading time from word count (average 200 words per minute)
const words = post.body.trim().split(/\s+/).length;
const readTime = `${Math.ceil(words / 200)} min read`;

// Schema.org structured data
const articleSchema = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": pageTitle,
  "description": pageDescription,
  "datePublished": post.data.pubDate,
  "dateModified": post.data.pubDate,
  "author": {
    "@type": "Organization",
    "name": "Nurture Airbnb Property Management",
    "url": "https://www.nurturestays.ca"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Nurture Airbnb Property Management",
    "url": "https://www.nurturestays.ca",
    "logo": {
      "@type": "ImageObject",
      "url": "https://www.nurturestays.ca/images/logo.webp"
    }
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": `https://www.nurturestays.ca/blog/${post.slug}`
  }
};
---

<Layout title={pageTitle} description={pageDescription} schema={articleSchema}>
  <section class="hero hero-small">
    <div class="container">
      <nav class="breadcrumb">
        <a href="/blog">Blog</a>
        <span>/</span>
        <span>{post.data.category}</span>
      </nav>
      <h1>{post.data.title}</h1>
      <div class="article-meta">
        <span class="meta-date">{new Date(post.data.pubDate).toLocaleDateString('en-CA', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
        <span class="meta-separator">·</span>
        <span class="meta-read-time">{readTime}</span>
        <span class="meta-separator">·</span>
        <span class="meta-author">{post.data.author}</span>
      </div>
    </div>
  </section>

  <section class="section article-section">
    <div class="container">
      {post.data.youtubeId && (
        <div class="video-embed">
          <lite-youtube videoid={post.data.youtubeId} playlabel={`Play: ${post.data.title}`}>
            <button type="button" class="lty-playbtn" aria-label="Play video">
              <span class="lyt-visually-hidden">Play Video</span>
            </button>
          </lite-youtube>
        </div>
      )}
      <article class="article-content">
        <Content />

        {post.data.sourceUrl && (
          <div class="source-attribution">
            <p><strong>Source:</strong> <a href={post.data.sourceUrl} target="_blank" rel="noopener">{post.data.sourceTitle || 'Original Article'}</a></p>
          </div>
        )}
      </article>

      <div class="article-tags">
        {post.data.tags.map((tag: string) => (
          <span class="tag">{tag}</span>
        ))}
      </div>
    </div>
  </section>

  {relatedPosts.length > 0 && (
    <section class="related-posts">
      <div class="container">
        <h2>Related Articles</h2>
        <div class="related-grid">
          {relatedPosts.map((relatedPost) => (
            <a href={`/blog/${relatedPost.slug}`} class="related-card">
              <span class="related-category">{relatedPost.data.category}</span>
              <h3>{relatedPost.data.title}</h3>
              <p>{relatedPost.data.description}</p>
              <span class="related-date">
                {new Date(relatedPost.data.pubDate).toLocaleDateString('en-CA', { year: 'numeric', month: 'short', day: 'numeric' })}
              </span>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2>Need Help With Your Airbnb?</h2>
        <p>Let our local experts handle everything while you earn more passive income.</p>
        <a href="tel:647-957-8956" class="btn btn-primary btn-large">Call Now: 647-957-8956</a>
        <p class="cta-note">Free consultation · No obligation</p>
      </div>
    </div>
  </section>
</Layout>

<style>
  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
    font-size: 0.9rem;
  }

  .breadcrumb a {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    color: white;
    text-decoration: underline;
  }

  .breadcrumb span {
    color: rgba(255, 255, 255, 0.6);
  }

  .hero h1 {
    max-width: 800px;
    margin: 0 auto 1rem;
  }

  .article-meta {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    opacity: 0.9;
    font-size: 0.95rem;
  }

  .meta-separator {
    opacity: 0.5;
  }

  .article-section {
    background: white;
  }

  .video-embed {
    max-width: 750px;
    margin: 0 auto 2.5rem;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: var(--shadow-lg);
  }

  .video-embed iframe {
    width: 100%;
    height: 100%;
    border: none;
  }

  /* Lite YouTube Embed - lazy-loaded video facade */
  lite-youtube {
    background-color: #000;
    position: relative;
    display: block;
    contain: content;
    background-position: center center;
    background-size: cover;
    cursor: pointer;
    aspect-ratio: 16 / 9;
    width: 100%;
  }

  lite-youtube::before {
    content: attr(data-title);
    display: block;
    position: absolute;
    top: 0;
    background-image: linear-gradient(180deg, rgba(0,0,0,0.67) 0%, transparent 60%);
    width: 100%;
    padding: 0.75em 1em;
    font-size: 1.1em;
    color: #fff;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
  }

  lite-youtube .lty-playbtn {
    width: 68px;
    height: 48px;
    position: absolute;
    cursor: pointer;
    transform: translate3d(-50%, -50%, 0);
    top: 50%;
    left: 50%;
    z-index: 1;
    background-color: transparent;
    background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 68 48"><path d="M66.52 7.74c-.78-2.93-2.49-5.41-5.42-6.19C55.79.13 34 0 34 0S12.21.13 6.9 1.55c-2.93.78-4.63 3.26-5.42 6.19C.06 13.05 0 24 0 24s.06 10.95 1.48 16.26c.78 2.93 2.49 5.41 5.42 6.19C12.21 47.87 34 48 34 48s21.79-.13 27.1-1.55c2.93-.78 4.64-3.26 5.42-6.19C67.94 34.95 68 24 68 24s-.06-10.95-1.48-16.26z" fill="%23f00"/><path d="M45 24 27 14v20" fill="%23fff"/></svg>');
    filter: grayscale(100%);
    transition: filter 0.1s cubic-bezier(0, 0, 0.2, 1);
    border: none;
  }

  lite-youtube:hover .lty-playbtn,
  lite-youtube .lty-playbtn:focus {
    filter: none;
  }

  lite-youtube.lyt-activated {
    cursor: unset;
  }

  lite-youtube.lyt-activated::before,
  lite-youtube.lyt-activated .lty-playbtn {
    opacity: 0;
    pointer-events: none;
  }

  .lyt-visually-hidden {
    clip: rect(0 0 0 0);
    clip-path: inset(50%);
    height: 1px;
    overflow: hidden;
    position: absolute;
    white-space: nowrap;
    width: 1px;
  }

  .article-content {
    max-width: 750px;
    margin: 0 auto;
  }

  .article-content :global(h2) {
    font-size: 1.75rem;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .article-content :global(h3) {
