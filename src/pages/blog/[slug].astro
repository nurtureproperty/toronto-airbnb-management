---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => {
    return data.draft !== true;
  });

  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

const pageTitle = post.data.title;
const pageDescription = post.data.description;

// Schema.org structured data
const articleSchema = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": pageTitle,
  "description": pageDescription,
  "datePublished": post.data.pubDate,
  "dateModified": post.data.pubDate,
  "author": {
    "@type": "Organization",
    "name": "Nurture Airbnb Property Management",
    "url": "https://www.nurturestays.ca"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Nurture Airbnb Property Management",
    "url": "https://www.nurturestays.ca",
    "logo": {
      "@type": "ImageObject",
      "url": "https://www.nurturestays.ca/images/logo.webp"
    }
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": `https://www.nurturestays.ca/blog/${post.slug}`
  }
};
---

<Layout title={pageTitle} description={pageDescription} schema={articleSchema}>
  <section class="hero hero-small">
    <div class="container">
      <nav class="breadcrumb">
        <a href="/blog">Blog</a>
        <span>/</span>
        <span>{post.data.category}</span>
      </nav>
      <h1>{post.data.title}</h1>
      <div class="article-meta">
        <span class="meta-date">{new Date(post.data.pubDate).toLocaleDateString('en-CA', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
        <span class="meta-separator">·</span>
        <span class="meta-author">{post.data.author}</span>
      </div>
    </div>
  </section>

  <section class="section article-section">
    <div class="container">
      <article class="article-content">
        <Content />

        {post.data.sourceUrl && (
          <div class="source-attribution">
            <p><strong>Source:</strong> <a href={post.data.sourceUrl} target="_blank" rel="noopener">{post.data.sourceTitle || 'Original Article'}</a></p>
          </div>
        )}
      </article>

      <div class="article-tags">
        {post.data.tags.map((tag: string) => (
          <span class="tag">{tag}</span>
        ))}
      </div>
    </div>
  </section>

  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2>Need Help With Your Airbnb?</h2>
        <p>Let our local experts handle everything while you earn more passive income.</p>
        <a href="tel:647-957-8956" class="btn btn-primary btn-large">Call Now: 647-957-8956</a>
        <p class="cta-note">Free consultation · No obligation</p>
      </div>
    </div>
  </section>
</Layout>

<style>
  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
    font-size: 0.9rem;
  }

  .breadcrumb a {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    color: white;
    text-decoration: underline;
  }

  .breadcrumb span {
    color: rgba(255, 255, 255, 0.6);
  }

  .hero h1 {
    max-width: 800px;
    margin: 0 auto 1rem;
  }

  .article-meta {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    opacity: 0.9;
    font-size: 0.95rem;
  }

  .meta-separator {
    opacity: 0.5;
  }

  .article-section {
    background: white;
  }

  .article-content {
    max-width: 750px;
    margin: 0 auto;
  }

  .article-content :global(h2) {
    font-size: 1.75rem;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .article-content :global(h3) {
    font-size: 1.3rem;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    color: var(--color-text);
  }

  .article-content :global(p) {
    margin-bottom: 1.25rem;
    line-height: 1.8;
    color: var(--color-text);
  }

  .article-content :global(ul),
  .article-content :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  .article-content :global(li) {
    margin-bottom: 0.5rem;
    line-height: 1.7;
  }

  .article-content :global(a) {
    color: var(--color-primary);
    text-decoration: none;
  }

  .article-content :global(a:hover) {
    text-decoration: underline;
  }

  .article-content :global(strong) {
    font-weight: 600;
  }

  .article-content :global(blockquote) {
    background: var(--color-background-alt);
    border-left: 4px solid var(--color-primary);
    padding: 1.5rem;
    margin: 1.5rem 0;
    font-style: italic;
    border-radius: 0 12px 12px 0;
  }

  .source-attribution {
    margin-top: 3rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border);
    font-size: 0.9rem;
    color: var(--color-text-muted);
  }

  .source-attribution a {
    color: var(--color-primary);
  }

  .article-tags {
    max-width: 750px;
    margin: 2rem auto 0;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    background: var(--color-background-alt);
    color: var(--color-text-muted);
    padding: 0.35rem 1rem;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 500;
  }

  .cta-section {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    padding: 5rem 0;
    text-align: center;
    color: white;
  }

  .cta-content h2 {
    color: white;
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .cta-content p {
    font-size: 1.25rem;
    opacity: 0.95;
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-section .btn {
    background: white;
    color: var(--color-primary);
  }

  .cta-note {
    margin-top: 1.5rem;
    font-size: 1rem;
    opacity: 0.9;
  }

  @media (max-width: 576px) {
    .hero h1 {
      font-size: 1.75rem;
    }

    .article-content :global(h2) {
      font-size: 1.5rem;
    }

    .cta-content h2 {
      font-size: 2rem;
    }
  }
</style>
