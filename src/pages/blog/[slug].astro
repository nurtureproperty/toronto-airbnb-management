  .cta-section {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    padding: 5rem 0;
    text-align: center;
    color: white;
  }

  .cta-content h2 {
    color: white;
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .cta-content p {
    font-size: 1.25rem;
    opacity: 0.95;
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-section .btn {
    background: white;
    color: var(--color-primary);
  }

  .cta-note {
    margin-top: 1.5rem;
    font-size: 1rem;
    opacity: 0.9;
  }

  /* Comparison Table Styles */
  .article-content :global(.comparison-table) {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: var(--shadow-md);
    margin: 1.5rem 0 2rem;
  }

  .article-content :global(.comparison-header) {
    display: grid;
    grid-template-columns: 1.5fr 1fr 2fr;
    background: var(--color-dark);
    color: white;
    font-weight: 600;
    font-size: 0.9rem;
  }

  .article-content :global(.comparison-table.two-col .comparison-header) {
    grid-template-columns: 1.5fr 1fr 1.5fr;
  }

  .article-content :global(.comparison-header > div) {
    padding: 1rem;
    text-align: center;
  }

  .article-content :global(.comparison-header .col-company),
  .article-content :global(.comparison-header .col-feature) {
    text-align: left;
  }

  .article-content :global(.comparison-row) {
    display: grid;
    grid-template-columns: 1.5fr 1fr 2fr;
    border-bottom: 1px solid var(--color-border);
    font-size: 0.95rem;
  }

  .article-content :global(.comparison-table.two-col .comparison-row) {
    grid-template-columns: 1.5fr 1fr 1.5fr;
  }

  .article-content :global(.comparison-row:last-child) {
    border-bottom: none;
  }

  .article-content :global(.comparison-row > div) {
    padding: 0.875rem 1rem;
    display: flex;
    align-items: center;
  }

  .article-content :global(.comparison-row .col-commission),
  .article-content :global(.comparison-row .col-nurture),
  .article-content :global(.comparison-row .col-competitors) {
    justify-content: center;
    text-align: center;
  }

  .article-content :global(.comparison-row.highlight) {
    background: var(--color-primary-light);
  }

  .article-content :global(.comparison-row .highlight-good) {
    color: var(--color-primary-dark);
    font-weight: 600;
  }

  .article-content :global(.col-nurture) {
    background: rgba(117, 155, 143, 0.08);
  }

  @media (max-width: 768px) {
    .article-content :global(.comparison-header),
    .article-content :global(.comparison-row) {
      grid-template-columns: 1fr 0.8fr 1.5fr;
    }

    .article-content :global(.comparison-table.two-col .comparison-header),
    .article-content :global(.comparison-table.two-col .comparison-row) {
      grid-template-columns: 1fr 1fr 1fr;
    }

    .article-content :global(.comparison-row > div) {
      padding: 0.75rem 0.5rem;
      font-size: 0.85rem;
    }

    .article-content :global(.comparison-header > div) {
      padding: 0.75rem 0.5rem;
      font-size: 0.8rem;
    }
  }

  @media (max-width: 576px) {
    .hero h1 {
      font-size: 1.75rem;
    }

    .article-content :global(h2) {
      font-size: 1.5rem;
    }

    .cta-content h2 {
      font-size: 2rem;
    }
  }

  /* Related Posts Section */
  .related-posts {
    background: var(--color-background-alt);
    padding: 4rem 0;
  }

  .related-posts h2 {
    text-align: center;
    margin-bottom: 2.5rem;
    font-size: 2rem;
    color: var(--color-text);
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .related-card {
    background: white;
    border-radius: 12px;
    padding: 1.5rem;
    text-decoration: none;
    display: flex;
    flex-direction: column;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
  }

  .related-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  .related-category {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-primary);
    margin-bottom: 0.75rem;
  }

  .related-card h3 {
    font-size: 1.1rem;
    color: var(--color-text);
    margin-bottom: 0.75rem;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .related-card p {
    font-size: 0.9rem;
    color: var(--color-text-muted);
    line-height: 1.6;
    flex-grow: 1;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    margin-bottom: 1rem;
  }

  .related-date {
    font-size: 0.8rem;
    color: var(--color-text-muted);
  }

  @media (max-width: 768px) {
    .related-grid {
      grid-template-columns: 1fr;
      max-width: 500px;
    }

    .related-posts h2 {
      font-size: 1.75rem;
    }
  }
</style>

<script>
  // Lite YouTube Embed - loads iframe only on click
  class LiteYTEmbed extends HTMLElement {
    connectedCallback() {
      const videoId = this.getAttribute('videoid');
      const playLabel = this.getAttribute('playlabel') || 'Play';

      // Use maxresdefault with fallback to hqdefault
      this.style.backgroundImage = `url(https://i.ytimg.com/vi/${videoId}/hqdefault.jpg)`;

      // Try to load higher quality thumbnail
      const img = new Image();
      img.onload = () => {
        if (img.naturalWidth > 120) {
          this.style.backgroundImage = `url(https://i.ytimg.com/vi/${videoId}/maxresdefault.jpg)`;
        }
      };
      img.src = `https://i.ytimg.com/vi/${videoId}/maxresdefault.jpg`;

      this.setAttribute('data-title', playLabel);

      this.addEventListener('click', () => this.activateIframe());
    }

    activateIframe() {
      const videoId = this.getAttribute('videoid');
      const iframe = document.createElement('iframe');
      iframe.width = '100%';
      iframe.height = '100%';
      iframe.title = this.getAttribute('playlabel') || 'YouTube video';
      iframe.allow = 'accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture';
      iframe.allowFullscreen = true;
      iframe.src = `https://www.youtube.com/embed/${videoId}?autoplay=1`;

      this.classList.add('lyt-activated');
      this.innerHTML = '';
      this.appendChild(iframe);
    }
  }

  // Define the custom element
  if (!customElements.get('lite-youtube')) {
    customElements.define('lite-youtube', LiteYTEmbed);
  }
</script>
