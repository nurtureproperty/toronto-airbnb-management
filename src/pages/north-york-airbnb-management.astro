  { icon: 'üè¢', name: 'North York Centre', description: 'Urban core with Mel Lastman Square, theatres, and corporate offices. Strong demand from business visitors and event attendees.', revenue: '$3,600-$4,800/month' },
  { icon: 'üèòÔ∏è', name: 'Willowdale', description: 'Mix of high-rises and family homes. Popular with families visiting relatives and professionals on extended stays.', revenue: '$3,200-$4,200/month' },
  { icon: 'üõçÔ∏è', name: 'Bayview Village', description: 'Upscale area with luxury shopping and dining. Attracts premium guests seeking quieter, more residential accommodations.', revenue: '$3,800-$5,000/month' },
  { icon: 'üöá', name: 'Finch Station Area', description: 'Northern terminus with excellent transit access. Budget-conscious travelers appreciate the lower rates and subway convenience.', revenue: '$3,000-$3,800/month' },
