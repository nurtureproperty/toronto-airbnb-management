<style>
  .hero-subtitle {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .terms-section {
    background: var(--color-background);
  }

  .terms-content {
    max-width: 800px;
    margin: 0 auto;
    background: white;
    padding: 3rem;
    border-radius: 16px;
    box-shadow: var(--shadow-md);
  }

  .terms-content .intro {
    font-size: 1.1rem;
    color: var(--color-text-light);
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--color-border);
  }

  .terms-content h2 {
    font-size: 1.5rem;
    margin: 2rem 0 1rem;
    color: var(--color-text);
  }

  .terms-content h2:first-of-type {
    margin-top: 0;
  }

  .terms-content p {
    color: var(--color-text-light);
    line-height: 1.8;
    margin-bottom: 1rem;
  }

  .terms-content a {
    color: var(--color-primary);
    text-decoration: underline;
  }

  .terms-content a:hover {
    color: var(--color-primary-dark);
  }

  @media (max-width: 768px) {
    .terms-content {
      padding: 1.5rem;
    }
  }
</style>
