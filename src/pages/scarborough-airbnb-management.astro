  .opportunity-content {
    max-width: 800px;
    margin: 0 auto 3rem;
  }

  .opportunity-content p {
    font-size: 1.25rem;
    line-height: 1.8;
    color: rgba(255, 255, 255, 0.9);
  }

  .opportunity-stats {
