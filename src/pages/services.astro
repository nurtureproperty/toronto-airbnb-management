---
import Layout from '../layouts/Layout.astro';

const services = [
  {
    title: 'Professional Photography',
    description: 'High-quality photos that showcase your property and attract more bookings.',
    features: ['HDR photography', 'Virtual staging', 'Lifestyle shots'],
    href: '/services/airbnb-photography-toronto'
  },
  {
    title: 'Listing Optimization',
    description: 'Compelling descriptions and strategic positioning across all major platforms.',
    features: ['Multi-platform listing', 'SEO optimization', 'Competitive analysis'],
    href: '/services/airbnb-listing-optimization-toronto'
  },
  {
    title: 'Guest Communication',
    description: 'Round-the-clock support ensuring guests always get quick responses.',
    features: ['Under 9-minute avg response time', 'Check-in coordination', 'Issue resolution'],
    href: '/services/airbnb-co-host-toronto'
  },
  {
    title: 'Dynamic Pricing',
    description: 'AI-powered pricing that maximizes your revenue based on demand.',
    features: ['Real-time adjustments', 'Event-based pricing', 'Seasonal optimization'],
    href: '/services/airbnb-dynamic-pricing-toronto'
  },
  {
    title: 'Professional Cleaning',
    description: 'Hotel-quality cleaning between every guest stay.',
    features: ['Trained cleaners', 'Quality inspections', 'Restocking supplies'],
    href: '/services/airbnb-cleaning-toronto'
  },
  {
    title: 'Maintenance & Repairs',
    description: 'Proactive maintenance and rapid response to any issues.',
    features: ['Regular inspections', 'Trusted vendor network', 'Rapid response'],
    href: '/services/airbnb-property-maintenance-toronto'
  },
  {
    title: 'Turnover Management',
    description: 'Seamless guest transitions with coordinated cleaning and restocking.',
    features: ['Same-day turnovers', 'Quality checks', 'Photo verification'],
    href: '/services/airbnb-turnover-management-toronto'
  },
  {
    title: 'Key Management',
    description: 'Secure and convenient access solutions for your guests.',
    features: ['Smart locks', 'Key exchange', 'Access codes'],
    href: '/services/airbnb-key-exchange-toronto'
  },
  {
    title: 'Emergency Support',
    description: '24/7 emergency response for guest lockouts, urgent repairs, and crisis management.',
    features: ['24/7 availability', 'Rapid response', 'Crisis management'],
    href: '/emergency-airbnb-support-toronto'
  }
];

const managementPackages = [
  {
    title: 'Full Airbnb Management',
    description: 'Complete hands-off management for short-term rentals. We handle everything.',
    href: '/services/full-airbnb-management-toronto'
  },
  {
    title: 'Short-Term Rental Management',
    description: 'Specialized management for vacation rentals and nightly bookings.',
    href: '/services/short-term-rental-management-toronto'
  },
  {
    title: 'Mid-Term Rental Management',
    description: 'Management for 30+ day rentals, corporate housing, and extended stays.',
    href: '/services/mid-term-rental-management-toronto'
  },
  {
    title: 'Airbnb Co-Hosting Services',
    description: 'Flexible support while you stay in control. Perfect for hands-on hosts.',
    href: '/services/airbnb-co-host-toronto'
  }
];
---

<Layout title="Services">
  <section class="hero hero-small">
    <div class="container">
      <h1>Our Services</h1>
      <p class="hero-subtitle">Comprehensive property management solutions tailored for the GTA's short-term rental market.</p>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="services-detailed-grid">
        {services.map(service => (
          <a href={service.href} class="service-detailed-card">
            <h3>{service.title}</h3>
            <p class="service-desc">{service.description}</p>
            <ul class="service-features">
              {service.features.map(feature => (
                <li><span class="check">✓</span> {feature}</li>
              ))}
            </ul>
            <span class="learn-more">Learn more →</span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="section management-packages">
    <div class="container">
      <div class="section-header">
        <h2>Management Packages</h2>
        <p>Choose the level of support that works for you</p>
      </div>
      <div class="packages-grid">
        {managementPackages.map(pkg => (
          <a href={pkg.href} class="package-card">
            <h3>{pkg.title}</h3>
            <p>{pkg.description}</p>
            <span class="learn-more">Learn more →</span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="pricing-section">
    <div class="container">
      <div class="section-header">
        <h2>Simple, Transparent Pricing</h2>
        <p>No hidden fees. You only pay when you earn.</p>
      </div>
      <div class="pricing-grid">
        <div class="pricing-card">
          <h3>Starter</h3>
          <div class="price"><span>10%</span> of booking revenue</div>
          <ul>
            <li>✓ Professional listing creation</li>
            <li>✓ Dynamic pricing optimization</li>
            <li>✓ Guest communication (business hours)</li>
            <li>✓ Monthly reporting</li>
          </ul>
          <a href="/contact" class="btn btn-secondary">Get Started</a>
        </div>
        <div class="pricing-card featured">
          <div class="popular-badge">Most Popular</div>
          <h3>Professional</h3>
          <div class="price"><span>15%</span> of booking revenue</div>
          <ul>
            <li>✓ Everything in Starter</li>
            <li>✓ Guest communication</li>
            <li>✓ Professional cleaning coordination</li>
            <li>✓ Dedicated account manager</li>
            <li>✓ Contractor coordination</li>
            <li>✓ Insurance claim assistance</li>
          </ul>
          <a href="/contact" class="btn btn-primary">Get Started</a>
        </div>
      </div>
      <p class="pricing-details-link">See <a href="/pricing-toronto-airbnb-management">full pricing details</a> and feature comparison</p>
    </div>
  </section>

  <section class="section locations-section">
    <div class="container">
      <div class="section-header">
        <h2>Service Areas</h2>
        <p>We provide property management across the Greater Toronto Area and Southern Ontario</p>
      </div>
      <div class="locations-links">
        <a href="/downtown-toronto-airbnb-management">Downtown Toronto</a>
        <a href="/north-york-airbnb-management">North York</a>
        <a href="/etobicoke-airbnb-management">Etobicoke</a>
        <a href="/scarborough-airbnb-management">Scarborough</a>
        <a href="/mississauga-airbnb-management">Mississauga</a>
        <a href="/locations">Southern Ontario</a>
      </div>
      <p class="locations-cta">View all <a href="/locations">service areas</a> or <a href="/about">learn about us</a></p>
    </div>
  </section>
</Layout>

<style>
  .hero-subtitle { text-align: center; max-width: 600px; margin: 0 auto; }
  .services-detailed-grid { display: grid; grid-template-columns: repeat(2, 1fr); gap: 2rem; }
  .service-detailed-card { display: block; text-decoration: none; color: inherit; background: white; border: 1px solid var(--color-border); border-radius: 16px; padding: 2rem; transition: all 0.3s ease; border-left: 4px solid var(--color-primary); }
  .service-detailed-card:hover { border-color: var(--color-primary); box-shadow: var(--shadow-lg); transform: translateY(-4px); }
  .service-detailed-card h3 { margin: 0 0 0.75rem; font-size: 1.25rem; color: var(--color-text); font-family: 'Poppins', sans-serif; font-style: normal; font-weight: 600; }
  .service-desc { color: var(--color-text-light); margin-bottom: 1.5rem; line-height: 1.6; }
  .service-features { list-style: none; padding: 0; margin: 0; }
  .service-features li { display: flex; align-items: center; gap: 0.5rem; padding: 0.4rem 0; color: var(--color-text-light); font-size: 0.95rem; }
  .service-features .check { color: var(--color-primary); font-weight: bold; }
  .service-detailed-card .learn-more { display: block; margin-top: 1.25rem; color: var(--color-primary); font-weight: 600; }

  .management-packages { background: var(--color-background-alt); }
  .packages-grid { display: grid; grid-template-columns: repeat(4, 1fr); gap: 1.5rem; }
  .package-card { display: flex; flex-direction: column; text-decoration: none; background: white; border-radius: 16px; padding: 2rem; text-align: left; border: 1px solid var(--color-border); transition: all 0.3s ease; border-top: 4px solid var(--color-primary); }
  .package-card:hover { border-color: var(--color-primary); transform: translateY(-4px); box-shadow: var(--shadow-lg); }
  .package-card h3 { color: var(--color-text); margin: 0 0 0.75rem; font-size: 1.1rem; font-weight: 600; font-family: 'Poppins', sans-serif; font-style: normal; }
  .package-card p { color: var(--color-text-light); margin: 0; font-size: 0.9rem; line-height: 1.5; flex-grow: 1; }
  .package-card .learn-more { color: var(--color-primary); font-weight: 600; margin-top: 1rem; }

  .pricing-section { background: var(--color-background-alt); padding: 5rem 0; }
  .pricing-grid { display: grid; grid-template-columns: repeat(2, 1fr); gap: 2rem; max-width: 700px; margin: 0 auto; }
  .pricing-card { background: white; border-radius: 16px; padding: 2rem; text-align: center; border: 2px solid var(--color-border); position: relative; }
  .pricing-card.featured { border-color: var(--color-primary); transform: scale(1.05); }
  .popular-badge { position: absolute; top: -12px; left: 50%; transform: translateX(-50%); background: var(--color-primary); color: white; padding: 0.25rem 1rem; border-radius: 20px; font-size: 0.8rem; font-weight: 600; }
  .pricing-card h3 { font-size: 1.5rem; margin-bottom: 1rem; font-family: 'Poppins', sans-serif; font-style: normal; font-weight: 600; }
  .price { font-size: 1rem; color: var(--color-text-light); margin-bottom: 2rem; }
  .price span { font-size: 2.5rem; font-weight: 700; color: var(--color-text); }
  .pricing-card ul { list-style: none; padding: 0; margin: 0 0 2rem; text-align: left; }
  .pricing-card li { padding: 0.5rem 0; color: var(--color-text-light); }
  .pricing-details-link { text-align: center; margin-top: 2rem; color: var(--color-text-light); }
  .pricing-details-link a { color: var(--color-primary); text-decoration: underline; font-weight: 500; }
  .pricing-details-link a:hover { color: var(--color-primary-dark); }

  .locations-section { background: var(--color-background-alt); }
  .locations-links { display: flex; justify-content: center; gap: 1rem; flex-wrap: wrap; margin-bottom: 2rem; }
  .locations-links a { background: white; padding: 0.75rem 1.5rem; border-radius: 50px; text-decoration: none; color: var(--color-text); font-weight: 500; transition: all 0.3s ease; border: 1px solid var(--color-border); }
  .locations-links a:hover { background: var(--color-primary); color: white; border-color: var(--color-primary); }
  .locations-cta { text-align: center; color: var(--color-text-light); }
  .locations-cta a { color: var(--color-primary); text-decoration: underline; }
  .locations-cta a:hover { color: var(--color-primary-dark); }

  @media (max-width: 968px) {
    .services-detailed-grid, .pricing-grid { grid-template-columns: 1fr; }
    .packages-grid { grid-template-columns: repeat(2, 1fr); }
    .pricing-card.featured { transform: none; }
  }
  @media (max-width: 600px) {
    .packages-grid { grid-template-columns: 1fr; }
  }
</style>