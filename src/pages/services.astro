<style>
  .services-detailed-grid { display: grid; grid-template-columns: repeat(2, 1fr); gap: 2rem; }
  .service-detailed-card { background: white; border: 1px solid var(--color-border); border-radius: 16px; padding: 2rem; transition: all 0.3s ease; }
  .service-detailed-card:hover { border-color: var(--color-primary); box-shadow: var(--shadow-lg); }
  .service-header { display: flex; align-items: center; gap: 1rem; margin-bottom: 1rem; }
  .service-icon { font-size: 2.5rem; }
  .service-header h3 { margin: 0; font-size: 1.25rem; }
  .service-desc { color: var(--color-text-light); margin-bottom: 1.5rem; }
  .service-features { list-style: none; padding: 0; margin: 0; }
  .service-features li { display: flex; align-items: center; gap: 0.5rem; padding: 0.5rem 0; color: var(--color-text-light); }
  .service-features .check { color: var(--color-primary); font-weight: bold; }
  .pricing-section { background: var(--color-background-alt); padding: 5rem 0; }
  .pricing-grid { display: grid; grid-template-columns: repeat(2, 1fr); gap: 2rem; max-width: 700px; margin: 0 auto; }
  .pricing-card { background: white; border-radius: 16px; padding: 2rem; text-align: center; border: 2px solid var(--color-border); position: relative; }
  .pricing-card.featured { border-color: var(--color-primary); transform: scale(1.05); }
  .popular-badge { position: absolute; top: -12px; left: 50%; transform: translateX(-50%); background: var(--color-primary); color: white; padding: 0.25rem 1rem; border-radius: 20px; font-size: 0.8rem; font-weight: 600; }
  .pricing-card h3 { font-size: 1.5rem; margin-bottom: 1rem; }
  .price { font-size: 1rem; color: var(--color-text-light); margin-bottom: 2rem; }
  .price span { font-size: 2.5rem; font-weight: 700; color: var(--color-text); }
  .pricing-card ul { list-style: none; padding: 0; margin: 0 0 2rem; text-align: left; }
  .pricing-card li { padding: 0.5rem 0; color: var(--color-text-light); }
  .pricing-details-link { text-align: center; margin-top: 2rem; color: var(--color-text-light); }
  .pricing-details-link a { color: var(--color-primary); text-decoration: underline; font-weight: 500; }
  .pricing-details-link a:hover { color: var(--color-primary-dark); }
  .specialty-services { background: white; }
  .specialty-grid { display: flex; justify-content: center; }
  .specialty-card { display: block; max-width: 400px; padding: 2rem; background: var(--color-background-alt); border-radius: 16px; text-decoration: none; transition: all 0.3s ease; border: 2px solid transparent; text-align: center; }
  .specialty-card:hover { border-color: #dc2626; transform: translateY(-4px); box-shadow: var(--shadow-lg); }
  .specialty-card.emergency { border-left: 4px solid #dc2626; }
  .specialty-icon { font-size: 3rem; display: block; margin-bottom: 1rem; }
  .specialty-card h3 { color: var(--color-text); margin: 0 0 0.75rem; }
  .specialty-card p { color: var(--color-text-light); margin: 0 0 1rem; font-size: 0.95rem; }
  .specialty-card .learn-more { color: #dc2626; font-weight: 600; }
  .locations-section { background: var(--color-background-alt); }
  .locations-links { display: flex; justify-content: center; gap: 1rem; flex-wrap: wrap; margin-bottom: 2rem; }
