const services = [
  { icon: 'üìã', title: 'Property Listing', description: 'Professional photography, compelling descriptions, and optimized listings across all major platforms.' },
  { icon: 'üí¨', title: 'Guest Communication', description: '24/7 guest support, quick response times, and seamless check-in/check-out coordination.' },
  { icon: 'üßπ', title: 'Cleaning & Turnover', description: 'Professional cleaning teams ensuring your property is spotless for every guest.' },
  { icon: 'üìà', title: 'Dynamic Pricing', description: 'AI-powered pricing strategies to maximize your revenue throughout the year.' },
  { icon: 'üîß', title: 'Maintenance', description: 'Proactive maintenance and rapid response to any issues that arise.' },
  { icon: 'üìä', title: 'Reporting', description: 'Detailed monthly reports on performance, revenue, and guest feedback.' }
];

const stats = [
  { number: '200+', label: 'Properties Managed' },
  { number: '50,000+', label: 'Guests Hosted' },
  { number: '4.9', label: 'Average Rating' },
  { number: '30%', label: 'Revenue Increase' }
];

const testimonials = [
  { quote: 'TorontoBNB transformed my rental property into a consistent income stream. Their team handles everything professionally and my earnings increased by 40%.', author: 'Michael Chen', role: 'Property Owner, Downtown Toronto' },
  { quote: 'The best decision I made was partnering with TorontoBNB. Their attention to detail and guest communication is exceptional.', author: 'Sarah Williams', role: 'Property Owner, North York' },
  { quote: 'As someone with multiple properties, I needed a reliable partner. TorontoBNB exceeded all expectations.', author: 'David Park', role: 'Property Investor, Scarborough' }
